@{
    ViewData["Title"] = "Admin Dashboard - PolicyPro360";
    Layout = "_Layout";

}

<style>

    .text-gradient {
        background: linear-gradient(310deg, #7928ca, #ff0080);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }


    .bg-primary-subtle {
        background-color: rgba(var(--bs-primary-rgb), 0.1) !important;
        border: 1px solid rgba(var(--bs-primary-rgb), 0.2);
    }

    .bg-danger-subtle {
        background-color: rgba(var(--bs-danger-rgb), 0.1) !important;
        border: 1px solid rgba(var(--bs-danger-rgb), 0.2);
    }

    .fs-tiny {
        font-size: 0.75rem;
        padding: .3em .6em;
    }

</style>
<!--start main wrapper-->
<main class="main-wrapper">
    <div class="main-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Admin Dashboard</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Analysis</li>
                    </ol>
                </nav>
            </div>
            <div class="ms-auto">
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-primary">Settings</button>
                    <button type="button" class="btn btn-outline-primary split-bg-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
                        <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">
                   
                        <a href="@Url.Action("Index", "Admin")" class="dropdown-item">
                           
                            FAQ
                        </a>


                        <a href="@Url.Action("Index", "Admin")" class="dropdown-item">
                         
                            Contact Form
                        </a>


                        <a href="@Url.Action("Index", "Admin")" class="dropdown-item">
                      
                            Blogs
                        </a>

                        <a href="@Url.Action("Index", "Admin")" class="dropdown-item">
                         
                            Privacy Policy
                        </a>

                        <a href="@Url.Action("Index", "Admin")" class="dropdown-item">
                     
                            Terms & Conditions
                        </a>
                        <a href="@Url.Action("Index", "AdminTestimonials")" class="dropdown-item">
                        
                            Testimonials
                        </a>
        
                    </div>
                </div>
            </div>
        </div>
        <!--end breadcrumb-->

        <div class="row">
            <div class="col-xxl-8 d-flex align-items-stretch">
                <div class="card w-100 overflow-hidden rounded-4">
                    <div class="card-body position-relative p-4">
                        <div class="row">
                            <div class="col-12 col-sm-7">
                                <div class="d-flex align-items-center gap-3 mb-5">
                                    <img src="@ViewBag.img" class="rounded-circle bg-grd-info p-1" width="70" height="70" alt="admin" style="object-fit: cover;">
                                    <div class="">
                                        <p class="mb-0 fw-semibold">Welcome back</p>
                                        <h4 class="fw-semibold mb-0 fs-4 mb-0">@ViewBag.name</h4>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center gap-5">
                                    <div class="">
                                        <h4 class="mb-1 fw-semibold d-flex align-content-center">
                                            $65.4K<i class="ti ti-arrow-up-right fs-5 lh-base text-success"></i>
                                        </h4>
                                        <p class="mb-3">Today's Sales</p>
                                        <div class="progress mb-0" style="height:5px;">
                                            <div class="progress-bar bg-grd-success" role="progressbar" style="width: 60%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                    <div class="vr"></div>
                                    <div class="">
                                        <h4 class="mb-1 fw-semibold d-flex align-content-center">
                                            78.4%<i class="ti ti-arrow-up-right fs-5 lh-base text-success"></i>
                                        </h4>
                                        <p class="mb-3">Growth Rate</p>
                                        <div class="progress mb-0" style="height:5px;">
                                            <div class="progress-bar bg-grd-danger" role="progressbar" style="width: 60%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-5">
                                <div class="welcome-back-img pt-4">
                                    <img src="~/admin/assets/images/gallery/welcome-back-3.png" height="180" alt="">
                                </div>
                            </div>
                        </div><!--end row-->
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-xxl-2 d-flex align-items-stretch">
                <div class="card w-100 rounded-4">
                    <div class="card-body">
                        <div class="d-flex align-items-start justify-content-between mb-3">
                            <div class="d-flex align-items-center gap-2">
                                <span class="material-icons-outlined text-success px-2 fs-2">groups</span>
                                <div>
                                    <h5 class="mb-0">@ViewBag.TotalUsers</h5>
                                    <p class="mb-0">Total Users</p>
                                </div>
                            </div>
                            <div class="dropdown">
                                <a href="javascript:;" class="dropdown-toggle-nocaret options dropdown-toggle"
                                   data-bs-toggle="dropdown">
                                    <span class="material-icons-outlined fs-5">more_vert</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "AdminUsers")">View All Users</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Create", "AdminUsers")">Add New User</a></li>
                
                                </ul>

                            </div>
                        </div>
                        <div class="chart-container2">
                            <div id="chart2"></div>
                        </div>
                        <div class="text-center">
                            <p class="mb-0 font-12">
                             
                                <span class="text-success me-1 fs-4" >@ViewBag.PolicyHolders</span> Active Users
                            </p>
                        </div>
                    </div>
                </div>
            </div>

          
            <div class="col-xl-6 col-xxl-2 d-flex align-items-stretch">
                <div class="card w-100 rounded-4">
                    <div class="card-body">
                        <div class="d-flex align-items-start justify-content-between mb-1">
                            <div class="d-flex align-items-center gap-2">
                                <span class="material-icons-outlined text-warning fs-2">shield</span>
                                <div>
                                    <h5 class="mb-0">@ViewBag.PolicyHolders</h5>
                                    <p class="mb-0">Policy Holders</p>
                                </div>
                            </div>
                            <div class="dropdown">
                                <a href="javascript:;" class="dropdown-toggle-nocaret options dropdown-toggle"
                                   data-bs-toggle="dropdown">
                                    <span class="material-icons-outlined fs-5">more_vert</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("AllUserPolicies", "AdminUsers")">View Policy Holders</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("AllCompanyPolicies", "AdminCompany")">View Company Policy</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="chart-container2">
                            <div id="chart1"></div>
                        </div>
                        <div class="text-center">
                            <p class="mb-0 font-12">
                                
                                <span class="text-warning me-1 fs-4">@ViewBag.TotalPoliciesSold</span>
                                policies have been sold
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-xxl-8 d-flex align-items-stretch">
                <div class="card w-100 rounded-4">
                    <div class="card-body">
                        <h5 class="mb-3">Recent Policy Sales</h5>
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Policy Holder</th>
                                        <th>Policy Name</th>
                                        <th>Company</th>
                                        <th>Premium</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sale in ViewBag.RecentSales)
                                    {
                                        <tr>
                                            <td>@sale.User.Name</td>
                                            <td>@sale.Policy.Name</td>
                                            <td>@sale.Policy.Company.CompanyName</td>
                                            <td>@sale.CalculatedPremium.ToString("C")</td>
                                            <td>@sale.PurchaseDate.ToString("dd MMM, yyyy")</td>
                                            <td>
                                                @if (sale.Status == "Active")
                                                {
                                                    <span class="dash-lable mb-0 bg-success bg-opacity-10 text-success rounded-2">@sale.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="dash-lable mb-0 bg-danger bg-opacity-10 text-danger rounded-2">@sale.Status</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xxl-4">
                <div class="row">
                    <div class="col-md-6 d-flex align-items-stretch">
                        <div class="card w-100 rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-start justify-content-between mb-1">
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="material-icons-outlined text-gradient fs-2">business</span>
                                        <div>
                                            <h5 class="mb-0">@ViewBag.TotalCompanies</h5>
                                            <p class="mb-0">Registered Companies</p>
                                        </div>
                                    </div>
                                    <div class="dropdown">
                                        <a href="javascript:;" class="dropdown-toggle-nocaret options dropdown-toggle"
                                           data-bs-toggle="dropdown">
                                            <span class="material-icons-outlined fs-5">more_vert</span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="@Url.Action("Index", "AdminCompany")">View Companies</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("ApprovedCompanies", "AdminCompany")">Approved Company</a></li>

                                        </ul>
                                    </div>
                                </div>
                                <div class="chart-container2">
                                    <div id="chart3"></div>
                                </div>
                                <div class="text-center">
                                    <p class="mb-0 font-12">
                                        <span class="text-gradient me-1 fs-4">@ViewBag.TotalCompanies</span> Active Companies
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 d-flex align-items-stretch">
                        <div class="card w-100 rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-start justify-content-between mb-1">
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="material-icons-outlined text-info fs-2">category</span>
                                        <div>
                                            <h5 class="mb-0">@ViewBag.TotalPolicyTypes</h5>
                                            <p class="mb-0">Total Policy Types</p>
                                        </div>
                                    </div>
                                    <div class="dropdown">
                                        <a href="javascript:;" class="dropdown-toggle-nocaret options dropdown-toggle"
                                           data-bs-toggle="dropdown">
                                            <span class="material-icons-outlined fs-5">more_vert</span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="@Url.Action("Create", "PolicyCategory")">View New Policy</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("Index", "PolicyCategory")">Add New Policy</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="chart-container2">
                                    <div id="chart4"></div>
                                </div>
                                <div class="text-center">
                                    <p class="mb-0 font-12">
                                        <span class="text-info me-1 fs-4">@ViewBag.TotalPolicyTypes</span> Policy types available
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card rounded-4 h-100 mb-3">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-4">Policies by Category</h5>

                            <div class="d-flex flex-column gap-3">
                                @if (ViewBag.CategoryPolicyStats != null && ((IEnumerable<dynamic>)ViewBag.CategoryPolicyStats).Any())
                                {
                                    foreach (var cat in ViewBag.CategoryPolicyStats)
                                    {

                                        <div class="d-flex justify-content-between align-items-center">


                                            <div class="d-flex align-items-center gap-3">
                                                <div class="d-inline-flex align-items-center justify-content-center bg-primary-subtle text-primary rounded-circle" style="width: 40px; height: 40px;">

                                                    <span class="material-icons-outlined">sell</span>
                                                </div>
                                                <p class="mb-0 fw-medium">@cat.CategoryName</p>
                                            </div>


                                            <h5 class="mb-0 text-primary-emphasis">@cat.PoliciesCount</h5>

                                        </div>
                                    }
                                }
                                else
                                {

                                    <div class="text-center py-4 text-secondary">
                                        <span class="material-icons-outlined fs-2 d-block mb-1">info</span>
                                        No category data available.
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
           
            </div>
            <div class="col-xl-4 col-xxl-4 d-flex">
                <div class="card w-100 rounded-4">
                    <div class="card-body p-4">

                        <!-- === Section 1: Loans & Claims Overview === -->
                        <h5 class="card-title mb-4 text-center">Loans & Claims Overview</h5>
                        <div class="row g-0 align-items-center">
                            <!-- Total User Loans Section -->
                            <div class="col text-center border-end">
                                <div class="d-inline-flex align-items-center justify-content-center bg-primary-subtle text-primary rounded-circle mb-2" style="width: 50px; height: 50px;">
                                    <span class="material-icons-outlined fs-2">request_quote</span>
                                </div>
                                <h4 class="mb-0">@ViewBag.TotalUserLoans</h4>
                                <p class="mb-0 text-secondary">Total Loans</p>
                            </div>

                            <!-- Total User Claims Section -->
                            <div class="col text-center">
                                <div class="d-inline-flex align-items-center justify-content-center bg-danger-subtle text-danger rounded-circle mb-2" style="width: 50px; height: 50px;">
                                    <span class="material-icons-outlined fs-2">fact_check</span>
                                </div>
                                <h4 class="mb-0">@ViewBag.TotalUserClaims</h4>
                                <p class="mb-0 text-secondary">Total Claims</p>
                            </div>
                        </div>

                        <!-- Separator -->
                        <hr class="my-4">

                        <!-- === Section 2: Breakdown by Category === -->
                        <h6 class="mb-3">Breakdown by Category</h6>
                        <div class="d-flex flex-column gap-3">
                            @if (ViewBag.CategoryStats != null && ((IEnumerable<dynamic>)ViewBag.CategoryStats).Any())
                            {
                                @foreach (var cat in ViewBag.CategoryStats)
                                {
                                    <div class="d-flex justify-content-between align-items-center">
                                        <p class="mb-0">@cat.CategoryName</p>
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="badge fs-tiny rounded-pill bg-primary-subtle text-primary">Loans: @cat.LoansCount</span>
                                            <span class="badge fs-tiny rounded-pill bg-danger-subtle text-danger">Claims: @cat.ClaimsCount</span>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-center text-secondary">No category data available.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- Revenue This Month Card -->
            <div class="col-12 col-lg-6 col-xl-4 d-flex">
                <div class="card w-100 rounded-4">
                    <div class="card-body">
                        <div class="text-center">
                            <h5 class="mb-2">Revenue This Month</h5>
                        </div>
                        <div class="text-center my-4">
                            <span class="material-icons-outlined text-primary" style="font-size: 48px;">account_balance_wallet</span>
                            <h2 class="mb-0 mt-2 text-primary">@ViewBag.AdminEarningsThisMonth.ToString("C")</h2>
                            <p class="mb-0 text-muted">Your Commission Earned</p>
                        </div>
                        <div class="d-flex flex-column gap-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <span>Gross Revenue (Total Sales)</span>
                                <span class="fw-bold text-success">@ViewBag.GrossRevenueThisMonth.ToString("C")</span>
                            </div>
                            <div class="d-flex align-items-center justify-content-between">
                                <span>Transactions This Month</span>
                                <span class="fw-bold">@ViewBag.TransactionsThisMonth</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity Card -->
            <div class="col-12 col-lg-6 col-xl-4 d-flex">
                <div class="card w-100 rounded-4">
                    <div class="card-body">
                        <h5 class="mb-4">Recent Policy Purchases</h5>
                        <ul class="list-group list-group-flush">
                            @foreach (var policy in ViewBag.RecentPolicies)
                            {
                                <li class="list-group-item d-flex align-items-center gap-3">
                                    <div class="p-2 bg-success-subtle rounded-circle">
                                        <span class="material-icons-outlined fs-5 text-success">receipt_long</span>
                                    </div>
                                    <div class="flex-grow-1">
                                        <p class="mb-0">@policy.Policy.Name</p>
                                        <small class="text-muted">by @policy.User.Name</small>
                                    </div>
                                    <div class="fw-bold text-end">
                                        @policy.CalculatedPremium.ToString("C")
                                        <br />
                                        <small class="text-muted fw-normal">@policy.PurchaseDate.ToString("MMM dd")</small>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Top Companies Card -->
            <div class="col-12 col-lg-12 col-xl-4 d-flex">
                <div class="card w-100 rounded-4">
                    <div class="card-body">
                        <h5 class="mb-4">Top Performing Companies</h5>
                        <ul class="list-group list-group-flush">
                            @foreach (var company in ViewBag.TopCompanies)
                            {
                                <li class="list-group-item d-flex align-items-center gap-3">
                                    <img src="@company.CompanyLogo" alt="" class="rounded-circle" width="40" height="40">
                                    <div class="flex-grow-1">
                                        <p class="mb-0">@company.CompanyName</p>
                                        <small class="text-muted">Total Earnings</small>
                                    </div>
                                    <div class="fw-bold">@company.TotalEarnings.ToString("C")</div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-xl-6 col-xxl-4 d-flex align-items-stretch">
                <div class="card w-100 rounded-4">
                    <div class="card-header border-0 p-3 border-bottom">
                        <h5 class="mb-0">New Users</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="user-list p-3">
                            <div class="d-flex flex-column gap-3">
                                @foreach (var user in ViewBag.NewUsers)
                                {
                                    <div class="d-flex align-items-center gap-3">
                                        <img src="@Url.Content(
                                            string.IsNullOrEmpty(user.ProfileImagePath) 
                                                ? "~/admin/assets/images/profiles/default.png" 
                                                : (user.ProfileImagePath.StartsWith("/") ? user.ProfileImagePath : "/admin/assets/images/profiles/" + user.ProfileImagePath)
                                        )" width="45" height="45" class="rounded-circle" alt="User Profile">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0">@user.Name</h6>
                                            <p class="mb-0 text-muted">@@@user.Username</p>
                                        </div>
                                        <a href="mailto:@user.Email" class="btn btn-sm btn-light-primary">Contact</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

         
    
        
        </div>
    </div>
</main>
<script src="~/admin/assets/js/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    var successMessage = "@TempData["success"]";

    if (successMessage === "Login successful!") {
        const Toast = Swal.mixin({
            toast: true,
            position: "top-end",
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.onmouseenter = Swal.stopTimer;
                toast.onmouseleave = Swal.resumeTimer;
            }
        });

        Toast.fire({
            icon: "success",
            title: successMessage
        });
    }
</script>
<!--end main wrapper-->