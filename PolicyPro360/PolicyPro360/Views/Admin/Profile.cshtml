@model PolicyPro360.Models.Admin
@{
	ViewData["Title"] = "Admin Profile - PolicyPro360";
	Layout = "_Layout";
}

<div class="main-wrapper">
	<div class="main-content">
		<!-- Breadcrumb -->
		<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
			<div class="breadcrumb-title pe-3">Admin Profile</div>
			<div class="ps-3">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-0 p-0">
						<li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")"><i class="bx bx-home-alt"></i></a></li>
						<li class="breadcrumb-item active" aria-current="page">Profile</li>
					</ol>
				</nav>
			</div>
		
		</div>
		<!-- End Breadcrumb -->

		<div class="row">

			<div class="col-lg-4">
				<div class="card shadow-sm rounded-4 border-0">
					<div class="card-body">
						<div class="d-flex flex-column align-items-center text-center">
							<div class="p-1 bg-grd-primary rounded-circle">
								<img src="@Url.Content(Model.Img ?? "/admin/assets/images/profiles/default.png")"
									 alt="Admin"
									 class="rounded-circle border border-3"
									 style="width: 120px; height: 120px; object-fit: cover; border-color: #d63384;">
							</div>
							<div class="mt-3 mb-3">
								<h4>@Model.Name</h4>
							</div>
						</div>
					</div>
				</div>
			</div>


			<div class="col-lg-8">

				<div class="card shadow-sm rounded-4 border-0 border-top border-5" style="border-image: linear-gradient(to right, #0d6efd, #198754, #ffc107) 1;">
					<div class="card-body p-4">

						<div class="tab-pane fade show active" id="primary-pills-company" role="tabpanel">
							<h5 class="mb-3 text-primary">Admin Details</h5>
							<div class="list-group list-group-flush">

								<div class="list-group-item d-flex align-items-center">
									<i class="material-icons-outlined text-primary me-3">person_outline</i>
									<div class="flex-grow-1"><h6 class="mb-0">Name</h6></div>
									<div class="text-secondary">@Model.Name</div>
								</div>

								<div class="list-group-item d-flex align-items-center">
									<i class="material-icons-outlined text-primary me-3">email</i>
									<div class="flex-grow-1"><h6 class="mb-0">Email</h6></div>
									<div class="text-secondary">@Model.Email</div>
								</div>
								<div class="ms-auto mt-3">
									<a asp-controller="Admin" asp-action="EditProfile" class="btn btn-grd-primary rounded-pill px-4 text-white">
										<i class="material-icons-outlined fs-6 me-1" style="vertical-align: middle;">edit</i>
										Edit Profile
									</a>
								</div>
							</div>
						</div>

					</div> 
				</div> 
			</div> 
		</div> 
	</div> 
</div> 