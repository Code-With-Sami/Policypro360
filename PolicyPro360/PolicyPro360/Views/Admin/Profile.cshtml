@model PolicyPro360.Models.Admin
@{
	ViewData["Title"] = "Admin Profile";
	Layout = "_Layout";
}

<div class="main-wrapper">
	<div class="main-content">
		<!-- Breadcrumb -->
		<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
			<div class="breadcrumb-title pe-3">Admin Profile</div>
			<div class="ps-3">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-0 p-0">
						<li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")"><i class="bx bx-home-alt"></i></a></li>
						<li class="breadcrumb-item active" aria-current="page">Profile</li>
					</ol>
				</nav>
			</div>
			<div class="ms-auto">
				<a asp-controller="Admin" asp-action="Dashboard" class="btn btn-grd-primary rounded-pill px-4 text-white">
					<i class="material-icons-outlined fs-6 me-1" style="vertical-align: middle;">edit</i>
					Edit Profile
				</a>
			</div>
		</div>
		<!-- End Breadcrumb -->

		<div class="row">
			<!-- Left Column: Profile Summary -->
			<div class="col-lg-4">
				<div class="card shadow-sm rounded-4 border-0">
					<div class="card-body">
						<div class="d-flex flex-column align-items-center text-center">
							<div class="p-1 bg-grd-primary rounded-circle">
								<img src="" alt="Company Logo" class="rounded-circle p-1 bg-white" width="110" height="110">
							</div>
							<div class="mt-3">
								<h4>@Model.Name</h4>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Right Column: Detailed Information with Tabs -->
			<div class="col-lg-8">
				<!-- Card ke top border ko gradient banaya hai -->
				<div class="card shadow-sm rounded-4 border-0 border-top border-5" style="border-image: linear-gradient(to right, #0d6efd, #198754, #ffc107) 1;">
					<div class="card-body p-4">

							<div class="tab-pane fade show active" id="primary-pills-company" role="tabpanel">
								<h5 class="mb-3 text-primary">Admin Details</h5>
								<div class="list-group list-group-flush">
									<div class="list-group-item d-flex align-items-center">
										<i class="material-icons-outlined text-primary me-3">apartment</i>
										<div class="flex-grow-1"><h6 class="mb-0">Name</h6></div>
										<div class="text-secondary">@Model.Name</div>
									</div>
									<div class="list-group-item d-flex align-items-center">
										<i class="material-icons-outlined text-primary me-3">storefront</i>
										<div class="flex-grow-1"><h6 class="mb-0">Email</h6></div>
										<div class="text-secondary">@Model.Email</div>
									</div>
									<div class="list-group-item d-flex align-items-center">
										<i class="material-icons-outlined text-primary me-3">factory</i>
										<div class="flex-grow-1"><h6 class="mb-0">Password</h6></div>
										<div class="text-secondary">@Model.Password</div>
									</div>
								</div>
							</div>

					</div> <!-- End of .card-body -->
				</div> <!-- End of .card -->
			</div> <!-- End of .col-lg-8 -->
		</div> <!-- End of .row -->
	</div> <!-- End of .main-content -->
</div> <!-- End of .main-wrapper -->