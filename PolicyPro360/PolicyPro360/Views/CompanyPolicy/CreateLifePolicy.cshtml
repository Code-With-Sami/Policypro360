@model PolicyPro360.Models.Policy

@{
    ViewData["Title"] = "Create a Life Insurance Policy";
    Layout = "_CompanyLayout";
}

<main class="main-wrapper">
    <div class="main-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Life Insurance Policy Form</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Add a Life Insurance Policy
                        </li>
                    </ol>
                </nav>
            </div>
            <div class="ms-auto">
                <div class="btn-group">
                    <a class="btn btn-grd-primary px-4 text-white" href="@Url.Action("Index", "CompanyPolicy", new { categoryId = @ViewBag.CategoryId })">
                        Show Life Insurance policies
                    </a>
                </div>
            </div>

        </div>
        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-xl-6">
                    <div class="card">
                        <div class="card-body p-4">
                            <h5 class="mb-4">Add a Life Insurance Policy</h5>
                            
                            <form asp-controller="CompanyPolicy" asp-action="CreateLifePolicy" method="post" enctype="multipart/form-data" class="row g-3">

                                <!-- Policy Name -->
                                <div class="col-md-12">
                                    <label asp-for="Name" class="form-label"></label>
                                    <div class="position-relative input-icon">
                                        <input asp-for="Name" class="form-control" placeholder="Enter policy name">
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">person</i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <!-- Policy Description -->
                                <div class="col-md-12">
                                    <label asp-for="Description" class="form-label"></label>
                                    <div class="position-relative input-icon">
                                        <input asp-for="Description" class="form-control" placeholder="Enter policy description">
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">description</i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                @* policy type id fetch from url *@
                                <input type="hidden" name="PolicyTypeId" value="@ViewBag.CategoryId" />


                                <!-- Policy SumInsured -->
                                <div class="col-md-12">
                                    <label asp-for="SumInsured" class="form-label"></label>
                                    <div class="position-relative input-icon">
                                        <input asp-for="SumInsured" class="form-control" placeholder="Enter Sum Insured">
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">shield</i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="SumInsured" class="text-danger"></span>
                                </div>

                                <!-- Policy Premium Amount  -->
                                <div class="col-md-12">
                                    <label asp-for="Premium" class="form-label"></label>
                                    <div class="position-relative input-icon">
                                        <input asp-for="Premium" class="form-control" placeholder="Enter Premium Amount">
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">diamond</i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Premium" class="text-danger"></span>
                                </div>

                                <!-- Policy Tenure -->
                                <div class="col-md-12">
                                    <label asp-for="Tenure" class="form-label"></label>
                                    <div class="position-relative input-icon">
                                        <input asp-for="Tenure" class="form-control" placeholder="Enter Policy Tenure">
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">calendar_today</i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Tenure" class="text-danger"></span>
                                </div>

                                <!-- Policy TermsConditions -->
                                <div class="col-md-12">
                                    <label asp-for="TermsConditions" class="form-label"></label>
                                    <div class="position-relative input-icon">
                                        <input asp-for="TermsConditions" class="form-control" placeholder="Enter Terms & Conditions">
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">description</i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="TermsConditions" class="text-danger"></span>
                                </div>

                                <!-- Policy Brochure Upload -->
                                <div class="col-md-12">
                                    <label class="form-label">Policy Brochure (Upload Image)</label>
                                    <div class="position-relative input-icon">
                                        <input type="file" name="BrochureFile" class="form-control" accept="image/*" />
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">upload_file</i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="BrochureUrl" class="text-danger"></span>
                                </div>


                                <!-- Dynamic Attributes -->


                                <!-- Min Entry Age -->
                                <div class="col-md-12">
                                    <label for="min_entry_age" class="form-label">Min Entry Age</label>
                                    <div class="position-relative input-icon">
                                        <input type="hidden" name="Attributes[0].Key" value="min_entry_age" />
                                        <input type="number" name="Attributes[0].Value" class="form-control" id="min_entry_age" placeholder="Min Entry Age">
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">calendar_today</i>
                                        </span>
                                    </div>
                                    <span class="text-danger"></span>
                                </div>

                                <!-- Max Entry Age -->
                                <div class="col-md-12">
                                    <label for="max_entry_age" class="form-label">Max Entry Age</label>
                                    <div class="position-relative input-icon">
                                        <input type="hidden" name="Attributes[1].Key" value="max_entry_age" />
                                        <input type="number" name="Attributes[1].Value" class="form-control" id="max_entry_age" placeholder="Max Entry Age" />
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">calendar_today</i>
                                        </span>
                                    </div>
                                    <span class="text-danger"></span>
                                </div>

                                <!-- Maturity Benefit -->
                                <div class="col-md-12">
                                    <label for="maturity_benefit" class="form-label">Maturity Benefit</label>
                                    <div class="position-relative input-icon">
                                        <input type="hidden" name="Attributes[2].Key" value="maturity_benefit" />
                                        <input type="text" name="Attributes[2].Value" class="form-control" id="maturity_benefit" placeholder="Maturity Benefit" />
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">category</i>
                                        </span>
                                    </div>
                                    <span class="text-danger"></span>
                                </div>

                                <!-- Death Benefit -->
                                <div class="col-md-12">
                                    <label for="death_benefit" class="form-label">Death Benefit</label>
                                    <div class="position-relative input-icon">
                                        <input type="hidden" name="Attributes[3].Key" value="death_benefit" />
                                        <input type="text" name="Attributes[3].Value" class="form-control" id="death_benefit" placeholder="Death Benefit" />
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">support</i>
                                        </span>
                                    </div>
                                    <span class="text-danger"></span>
                                </div>

                                <!-- Riders Available -->
                                <div class="col-md-12">
                                    <label for="riders_available" class="form-label">Riders Available</label>
                                    <div class="position-relative input-icon">
                                        <input type="hidden" name="Attributes[4].Key" value="riders_available" />
                                        <input type="text" name="Attributes[4].Value" class="form-control" id="riders_available" placeholder="Riders Available" />
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">person</i>
                                        </span>
                                    </div>
                                    <span class="text-danger"></span>
                                </div>

                                <!-- Premium Frequency -->
                                <div class="col-md-12">
                                    <label for="premium_frequency" class="form-label">Premium Frequency</label>
                                    <div class="position-relative input-icon">
                                        <input type="hidden" name="Attributes[5].Key" value="premium_frequency" />
                                        <input type="text" name="Attributes[5].Value" class="form-control" id="premium_frequency" placeholder="Premium Frequency" />
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">diamond</i>
                                        </span>
                                    </div>
                                    <span class="text-danger"></span>
                                </div>

                                <!-- Premium Payment Term -->
                                <div class="col-md-12">
                                    <label for="premium_payment_term" class="form-label">Premium Payment Term</label>
                                    <div class="position-relative input-icon">
                                        <input type="hidden" name="Attributes[6].Key" value="premium_payment_term" />
                                        <input type="text" name="Attributes[6].Value" class="form-control" id="premium_payment_term" placeholder="Premium Payment Term" />
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">credit_card</i>
                                        </span>
                                    </div>
                                    <span class="text-danger"></span>
                                </div>

                                <!-- exclusions -->
                                <div class="col-md-12">
                                    <label for="exclusions" class="form-label">Exclusions</label>
                                    <div class="position-relative input-icon">
                                        <input type="hidden" name="Attributes[7].Key" value="exclusions" />
                                        <input type="text" name="Attributes[7].Value" class="form-control" id="exclusions" placeholder="Exclusions" />
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">stars</i>
                                        </span>
                                    </div>
                                    <span class="text-danger"></span>
                                </div>

                                <!-- Category Status -->
                                 <div class="col-md-12">
                                    <label asp-for="Active" class="form-label"></label>
                                    <div class="form-check">
                                        <input asp-for="Active" class="form-check-input" type="checkbox" />
                                        <label class="form-check-label" for="Active">Yes</label> 
                                     </div>
                                    <span asp-validation-for="Active" class="text-danger"></span>
                                </div> 

                                <!-- Submit and Reset Buttons -->
                                <div class="col-md-12">
                                    <div class="d-md-flex d-grid align-items-center gap-3">
                                        <button type="submit" class="btn btn-grd-primary px-4 text-white">Submit</button>
                                        <button type="reset" class="btn btn-grd-royal px-4 text-white">Reset</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.querySelector('form');
            if (!form) return;

            function showError(input, message) {
                const errorSpan = input.parentElement.querySelector('.text-danger');
                if (errorSpan) errorSpan.textContent = message;
            }

            function clearError(input) {
                const errorSpan = input.parentElement.querySelector('.text-danger');
                if (errorSpan) errorSpan.textContent = '';
            }

            function isAlpha(value) {
                return /^[a-zA-Z\s]+$/.test(value);
            }

            function isNumeric(value) {
                return /^\d+(\.\d+)?$/.test(value);
            }

            function isValidFile(fileInput) {
                if (!fileInput.files.length) return false;
                const file = fileInput.files[0];
                return /\.(jpg|jpeg|png|webp)$/i.test(file.name);
            }

            form.addEventListener('submit', function (e) {
                let isValid = true;

                const name = form.querySelector('input[name="Name"]');
                if (!name.value.trim() || !isAlpha(name.value.trim())) {
                    showError(name, "Policy name is required and letters only.");
                    isValid = false;
                } else {
                    clearError(name);
                }

                const desc = form.querySelector('input[name="Description"]');
                if (!desc.value.trim() || desc.value.trim().length < 10) {
                    showError(desc, "Description must be at least 10 characters.");
                    isValid = false;
                } else {
                    clearError(desc);
                }

                const sumInsured = form.querySelector('input[name="SumInsured"]');
                if (!sumInsured.value.trim() || !isNumeric(sumInsured.value.trim()) || parseFloat(sumInsured.value) <= 0) {
                    showError(sumInsured, "Sum Insured is required and must be a positive number.");
                    isValid = false;
                } else {
                    clearError(sumInsured);
                }

                const premium = form.querySelector('input[name="Premium"]');
                if (!premium.value.trim() || !isNumeric(premium.value.trim()) || parseFloat(premium.value) <= 0) {
                    showError(premium, "Premium amount is required and must be a positive number.");
                    isValid = false;
                } else {
                    clearError(premium);
                }

                const terms = form.querySelector('input[name="TermsConditions"]');
                if (!terms.value.trim()) {
                    showError(terms, "Terms & Conditions are required.");
                    isValid = false;
                } else {
                    clearError(terms);
                }

                const brochure = form.querySelector('input[name="BrochureFile"]');
                if (!isValidFile(brochure)) {
                    showError(brochure, "Valid brochure image file is required.");
                    isValid = false;
                } else {
                    clearError(brochure);
                }

                // Dynamic Attributes Check (0 to 7)
                for (let i = 0; i <= 7; i++) {
                    const attrInput = form.querySelector(`input[name="Attributes[${i}].Value"]`);
                    if (!attrInput.value.trim() || (i <= 1 && (!isNumeric(attrInput.value.trim()) || parseFloat(attrInput.value) <= 0))) {
                        showError(attrInput, (i <= 1 ? "This field must be a positive number." : "This field is required."));
                        isValid = false;
                    } else {
                        clearError(attrInput);
                    }
                }

                if (!isValid) e.preventDefault();
            });

            // Live Restrict Name to Alphabets Only
            form.querySelector('input[name="Name"]').addEventListener('input', function () {
                this.value = this.value.replace(/[^a-zA-Z\s]/g, '');
            });

            // Live Numeric Restrictors
            ['SumInsured', 'Premium'].forEach(fieldName => {
                const input = form.querySelector(`input[name="${fieldName}"]`);
                input.addEventListener('input', function () {
                    this.value = this.value.replace(/[^0-9.]/g, '');
                });
            });

            // Live for Attributes (Numeric - min & max age)
            ['min_entry_age', 'max_entry_age'].forEach(attrId => {
                const input = form.querySelector(`#${attrId}`);
                input.addEventListener('input', function () {
                    this.value = this.value.replace(/[^0-9]/g, '');
                });
            });
        });
    </script>

}



