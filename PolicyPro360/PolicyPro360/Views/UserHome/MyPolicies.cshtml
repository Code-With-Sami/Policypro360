@{
    ViewData["Title"] = "My Policies - PolicyPro360";
    Layout = "_UserDashboardLayout";
}
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
<div class="container-fluid pt-4" id="policy">
    <!-- Custom Styles for My Policies Page -->
    <style>
        #policy {
            margin-top: 150px;
        }

        :root {
            --policy-bg: #171827;
            --policy-card-bg: #1e1f2f;
            --policy-primary: #f5a526;
            --policy-text: #e0e0e0;
            --policy-text-muted: #8a99b5;
            --policy-input-bg: #2a2c3c;
            /* Yeh color hum boxes ke liye istemal karenge */
            --policy-border-color: #404258;
        }

        .snapshot-card {
            background-color: var(--policy-card-bg);
            border: 1px solid var(--policy-border-color);
            border-radius: 10px;
            padding: 1.5rem;
            text-align: center;
            color: var(--policy-text);
        }

        .snapshot-icon {
            font-size: 2.5rem;
            color: var(--policy-primary);
            margin-bottom: 0.75rem;
        }

        .snapshot-value {
            font-size: 1.75rem;
            font-weight: 700;
            line-height: 1.2;
        }

        .snapshot-label {
            font-size: 0.9rem;
            color: var(--policy-text-muted);
        }

        .policies-card {
            background-color: var(--policy-card-bg);
            border-radius: 12px;
            border: none;
        }

        .policies-table {
            border-collapse: separate;
            border-spacing: 0 1rem;
            margin-top: -1rem;
        }

            .policies-table thead th {
                border: none;
                background-color: #171827;
                color: var(--policy-text-muted);
                font-weight: 600;
                font-size: 0.85rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .policies-table tbody tr {
                background-color: #171827 !important;
                transition: all 0.2s ease-in-out;
            }

                .policies-table tbody tr:hover {
                    transform: scale(1.015);
                    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
                    z-index: 2;
                    position: relative;
                }

            .policies-table tbody td {
                background-color: #171827 !important;
                color: var(--policy-text);
                vertical-align: middle;
                padding: 1rem 1.25rem;
                border: none;
                border-bottom: 1px solid var(--policy-border-color);
            }

            .policies-table tbody tr td:first-child {
                border-top-left-radius: 8px;
                border-bottom-left-radius: 8px;
            }

            .policies-table tbody tr td:last-child {
                border-top-right-radius: 8px;
                border-bottom-right-radius: 8px;
            }

        .company-logo {
            width: 30px;
            height: 30px;
            object-fit: contain;
            border-radius: 50%;
            margin-right: 1rem;
            background-color: white;
        }

        .badge-active {
            background-color: rgba(40, 199, 111, 0.1);
            color: #28c76f;
        }

        .badge-expired {
            background-color: rgba(234, 84, 85, 0.1);
            color: #ea5455;
        }

        .badge-pending {
            background-color: rgba(255, 159, 67, 0.1);
            color: #ff9f43;
        }
    </style>

    <!-- Row 1: Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-4 col-md-6">
            <div class="snapshot-card">
                <i class="ti ti-shield-check snapshot-icon"></i>
                <h3 class="snapshot-value text-white">3</h3>
                <p class="snapshot-label mb-0">Active Policies</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="snapshot-card">
                <i class="ti ti-report-money snapshot-icon"></i>
                <h3 class="snapshot-value text-white">$3,450</h3>
                <p class="snapshot-label mb-0">Total Annual Premium</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-12">
            <div class="snapshot-card">
                <i class="ti ti-calendar-event snapshot-icon"></i>
                <h3 class="snapshot-value text-white">15 Dec, 2024</h3>
                <p class="snapshot-label mb-0">Next Payment Due</p>
            </div>
        </div>
    </div>

    <!-- Row 2: Policies List Table -->
    <div class="card policies-card">
        <div class="card-body p-4">
            <div class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">
                <h5 class="card-title fw-semibold mb-0 text-white">My Insurance Policies</h5>
                <div class="d-flex flex-wrap">
                    <input type="search" class="form-control" placeholder="Search Policy..."
                           style="background-color: var(--policy-input-bg); color: var(--policy-text); border-color: var(--policy-border-color); width: 200px;">
                    <select class="form-select"
                            style="background-color: var(--policy-input-bg); color: var(--policy-text); border-color: var(--policy-border-color); width: 200px;">
                        <option value="">All Status</option>
                        <option value="Active">Active</option>
                        <option value="Expired">Expired</option>
                    </select>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table align-middle policies-table">
                    <thead>
                        <tr>
                            <th>Policy Name & Company</th>
                            <th class="text-end">Premium</th>
                            <th class="text-center">Due Date</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="assets/images/logos/company-1.png" alt="Company Logo"
                                         class="company-logo">
                                    <div>

                                        <h6 class="fw-semibold mb-0">Max Life Health Plan</h6>
                                        <small class="text-muted">Max Life Insurance</small>
                                    </div>
                                </div>
                            </td>

                            <td class="text-end fw-semibold">$150.00 / mo</td>
                            <td class="text-center text-muted">15 Dec, 2024</td>
                            <td class="text-center">
                                <span class="badge badge-active rounded-pill px-3 py-1">Active</span>
                            </td>
                            <td class="text-end">
                                <a href="@Url.Action("mypolicydetail","UserHome")" class="btn btn-sm btn-outline-light">
                                    View
                                    Details
                                </a>
                            </td>
                        </tr>

                        <!-- Policy Row 2: Expired -->
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="assets/images/logos/company-2.png" alt="Company Logo"
                                         class="company-logo">
                                    <div>

                                        <h6 class="fw-semibold mb-0">SecureDrive Car Insurance</h6>
                                        <small class="text-muted">Bajaj Allianz</small>
                                    </div>
                                </div>
                            </td>

                            <td class="text-end fw-semibold">$850.00 / yr</td>
                            <td class="text-center text-muted">01 Nov, 2024</td>
                            <td class="text-center">
                                <span class="badge badge-expired rounded-pill px-3 py-1">Expired</span>
                            </td>
                            <td class="text-end">
                                <a href="@Url.Action("mypolicydetail","UserHome")" class="btn btn-sm btn-outline-light">
                                    View
                                    Details
                                </a>
                            </td>
                        </tr>

                        <!-- Policy Row 3: Active -->
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="assets/images/logos/company-3.png" alt="Company Logo"
                                         class="company-logo">
                                    <div>

                                        <h6 class="fw-semibold mb-0">FutureInvest ULIP Plan</h6>
                                        <small class="text-muted">HDFC Life</small>
                                    </div>
                                </div>
                            </td>

                            <td class="text-end fw-semibold">$2500.00 / yr</td>
                            <td class="text-center text-muted">20 Jan, 2025</td>
                            <td class="text-center">
                                <span class="badge badge-active rounded-pill px-3 py-1">Active</span>
                            </td>
                            <td class="text-end">
                                <a href="@Url.Action("mypolicydetail","UserHome")" class="btn btn-sm btn-outline-light">
                                    View
                                    Details
                                </a>
                            </td>
                        </tr>

                        <!-- Policy Row 4: Pending -->
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="assets/images/logos/company-1.png" alt="Company Logo"
                                         class="company-logo">
                                    <div>
                                        <h6 class="fw-semibold mb-0">HomeSecure Plus</h6>
                                        <small class="text-muted">Tata AIG</small>
                                    </div>
                                </div>
                            </td>
                            <td class="text-end fw-semibold">$400.00 / yr</td>
                            <td class="text-center text-muted">--</td>
                            <td class="text-center">
                                <span class="badge badge-pending rounded-pill px-3 py-1">
                                    Pending
                                    Approval
                                </span>
                            </td>
                            <td class="text-end">
                                <a href="@Url.Action("mypolicydetail","UserHome")" class="btn btn-sm btn-outline-light">
                                    View
                                    Details
                                </a>
                            </td>
                        </tr>

                        <!-- Policy Row 5: Active -->
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="assets/images/logos/company-2.png" alt="Company Logo"
                                         class="company-logo">
                                    <div>

                                        <h6 class="fw-semibold mb-0">LifeSecure Term Plan</h6>
                                        <small class="text-muted">ICICI Prudential</small>
                                    </div>
                                </div>
                            </td>

                            <td class="text-end fw-semibold">$50.00 / mo</td>
                            <td class="text-center text-muted">05 Jan, 2025</td>
                            <td class="text-center">
                                <span class="badge badge-active rounded-pill px-3 py-1">Active</span>
                            </td>
                            <td class="text-end">
                                <a href="@Url.Action("mypolicydetail","UserHome")" class="btn btn-sm btn-outline-light">
                                    View
                                    Details
                                </a>
                            </td>
                        </tr>

                        <!-- Policy Row 6: Expired -->
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="assets/images/logos/company-3.png" alt="Company Logo"
                                         class="company-logo">
                                    <div>

                                        <h6 class="fw-semibold mb-0">TravelSafe Global</h6>
                                        <small class="text-muted">HDFC Ergo</small>
                                    </div>
                                </div>
                            </td>

                            <td class="text-end fw-semibold">$120.00 / yr</td>
                            <td class="text-center text-muted">30 Sep, 2024</td>
                            <td class="text-center">
                                <span class="badge badge-expired rounded-pill px-3 py-1">Expired</span>
                            </td>
                            <td class="text-end">
                                <a href="@Url.Action("mypolicydetail","UserHome")" class="btn btn-sm btn-outline-light">
                                    View
                                    Details
                                </a>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
