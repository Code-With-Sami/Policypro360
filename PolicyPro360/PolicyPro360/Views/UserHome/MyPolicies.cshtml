@model List<PolicyPro360.Models.UserPolicy>
@{
    ViewData["Title"] = "My Policies - PolicyPro360";
    Layout = "_UserDashboardLayout";
}
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->


<div class="container-fluid pt-4" id="policy">

    <style>

        #policy {
            margin-top: 150px;
        }

        :root {
            --policy-bg: #171827;
            --policy-card-bg: #1e1f2f;
            --policy-primary: #f5a526;
            --policy-text: #e0e0e0;
            --policy-text-muted: #8a99b5;
            --policy-input-bg: #2a2c3c;

            --policy-border-color: #404258;
        }

        .snapshot-card {
            background-color: var(--policy-card-bg);
            border: 1px solid var(--policy-border-color);
            border-radius: 10px;
            padding: 1.5rem;
            text-align: center;
            color: var(--policy-text);
        }

        .snapshot-icon {
            font-size: 2.5rem;
            color: var(--policy-primary);
            margin-bottom: 0.75rem;
        }

        .snapshot-value {
            font-size: 1.75rem;
            font-weight: 700;
            line-height: 1.2;
        }

        .snapshot-label {
            font-size: 0.9rem;
            color: var(--policy-text-muted);
        }

        .policies-card {
            background-color: var(--policy-card-bg);
            border-radius: 12px;
            border: none;
        }

        .policies-table {
            border-collapse: separate;
            border-spacing: 0 1rem;
            margin-top: -1rem;
        }

            .policies-table thead th {
                border: none;
                background-color: #171827;
                color: var(--policy-text-muted);
                font-weight: 600;
                font-size: 0.85rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .policies-table tbody tr {
                background-color: #171827 !important;
                transition: all 0.2s ease-in-out;
            }

                .policies-table tbody tr:hover {
                    transform: scale(1.015);
                    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
                    z-index: 2;
                    position: relative;
                }

            .policies-table tbody td {
                background-color: #171827 !important;
                color: var(--policy-text);
                vertical-align: middle;
                padding: 1rem 1.25rem;
                border: none;
                border-bottom: 1px solid var(--policy-border-color);
            }

            .policies-table tbody tr td:first-child {
                border-top-left-radius: 8px;
                border-bottom-left-radius: 8px;
            }

            .policies-table tbody tr td:last-child {
                border-top-right-radius: 8px;
                border-bottom-right-radius: 8px;
            }

        .company-logo {
            width: 30px;
            height: 30px;
            object-fit: contain;
            border-radius: 50%;
            margin-right: 1rem;
            background-color: white;
        }

        .badge-active {
            background-color: rgba(40, 199, 111, 0.1);
            color: #28c76f;
        }

        .badge-expired {
            background-color: rgba(234, 84, 85, 0.1);
            color: #ea5455;
        }

        .badge-pending {
            background-color: rgba(255, 159, 67, 0.1);
            color: #ff9f43;
        }
    </style>

    <!-- Row 1: Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-4 col-md-6">
            <div class="snapshot-card">
                <i class="ti ti-shield-check snapshot-icon"></i>
                <h3 class="snapshot-value text-white">@ViewBag.activepolicies</h3>
                <p class="snapshot-label mb-0">Active Policies</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="snapshot-card">
                <i class="ti ti-report-money snapshot-icon"></i>
                <h3 class="snapshot-value text-white">@ViewBag.totalPremium</h3>
                <p class="snapshot-label mb-0">Total Annual Premium</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-12">
            <div class="snapshot-card">
<i class="ti ti-shield-check snapshot-icon"></i>
                <h3 class="snapshot-value text-white">
                    Rs. @String.Format("{0:N2}", (decimal)ViewBag.totalSumInsured)
                </h3>
                <p class="snapshot-label mb-0">Total Sum Insured</p>
            </div>
        </div>
    </div>

    <!-- Row 2: Policies List Table -->
    <div class="card policies-card">
        <div class="card-body p-4">
            <div class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-3">
                <h5 class="card-title fw-semibold mb-0 text-white">My Insurance Policies</h5>
                <form asp-action="MyPolicies" method="get">
                    <div class="d-flex flex-wrap align-items-center gap-3">
                        <input type="search" class="form-control" placeholder="Search Policy..." name="searchTerm" value="@ViewData["CurrentSearchTerm"]"
                               style="background-color: var(--policy-input-bg); color: var(--policy-text); border-color: var(--policy-border-color); width: 200px;">

                        <select class="form-select" name="status" onchange="this.form.submit()"
                                style="background-color: var(--policy-input-bg); color: var(--policy-text); border-color: var(--policy-border-color); width: 200px;">
                            <option value="">All Status</option>
                            <option value="Active" selected="@(ViewData["CurrentStatus"] as string == "Active")">Active</option>
                            <option value="Expired" selected="@(ViewData["CurrentStatus"] as string == "Expired")">Expired</option>
                        </select>

                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>

            <div class="table-responsive">
                <table class="table align-middle policies-table">
                    <thead>
                        <tr>
                            <th>Policy Name & Company</th>
                            <th class="text-end">Premium</th>
                            <th class="text-center">Due Date</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var myPolicy in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@(myPolicy.Policy?.Company?.CompanyLogoPath ?? "/path/to/default/logo.png")" alt="Company Logo"
                                             class="company-logo">
                                        <div>

                                            <h6 class="fw-semibold mb-0 text-white">@(myPolicy.Policy?.Name ?? "N/A")</h6>
                                            <small class="text-muted">@(myPolicy.Policy?.Company?.CompanyName ?? "Unknown Company")</small>
                                        </div>
                                    </div>
                                </td>

                                <td class="text-end fw-semibold">@myPolicy.CalculatedPremium</td>
                                <td class="text-center text-white">@myPolicy.ExpiryDate.ToString("MMMM dd, yyyy")</td>
                                <td class="text-center">
                                    @{
                                        var status = myPolicy.Status ?? "Pending";
                                        var badgeClass = "badge-pending";
                                        if (status.Equals("Active", StringComparison.OrdinalIgnoreCase))
                                        {
                                            badgeClass = "badge-active";
                                        }
                                        else if (status.Equals("Expired", StringComparison.OrdinalIgnoreCase))
                                        {
                                            badgeClass = "badge-expired";
                                        }
                                    }
                                    <span class="badge @badgeClass rounded-pill px-3 py-1">@status</span>
                                </td>
                                <td class="text-end">
                                    <a href="@Url.Action("mypolicydetail", "UserHome", new { id = myPolicy.Id })" class="btn btn-sm btn-outline-light">
                                        View
                                        Details
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Page Content -->
<!-- ============================================================== -->