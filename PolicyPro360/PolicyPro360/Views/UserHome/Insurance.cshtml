@{
    ViewData["Title"] = "Our Insurance Plans - PolicyPro360";
    Layout = "_UserLayout";
    var iconMap = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase) {
        { "motor insurance", "icon-drive" },
        { "life insurance", "icon-family" },
        { "home insurance", "icon-home" },
        { "medical insurance", "icon-heart-beat" }
    };
    var imageMap = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase) {
        { "motor insurance", "~/user/assets/images/services/services-1-1.jpg" },
        { "life insurance", "~/user/assets/images/services/services-1-2.jpg" },
        { "home insurance", "~/user/assets/images/services/services-1-3.jpg" },
        { "medical insurance", "~/user/assets/images/services/services-1-4.jpg" }
    };
    var linkMap = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase) {
        { "motor insurance", "motor" },
        { "life insurance", "life" },
        { "home insurance", "home" },
        { "medical insurance", "medical" }
    };
}
<!--Page Header Start-->
<section class="page-header">
    <div class="page-header-bg" style="background-image: url('@Url.Content("~/user/assets/images/backgrounds/home-insurance-bg.jpg")')">
    </div>
    <div class="page-header-shape-1"><img src="~/user/assets/images/shapes/page-header-shape-1.png" alt=""></div>
    <div class="container">
        <div class="page-header__inner">
            <ul class="thm-breadcrumb list-unstyled">
                <li><a href="index.html">Home</a></li>
                <li><span>/</span></li>
                <li>Our Insurance Plans</li>
            </ul>
            <h2>Our Insurance Plans</h2>
        </div>
    </div>
</section>
<!--Page Header End-->
<!--Insurance Page One Start-->
<section class="insurance-page-one">
    <div class="services-one__container">
        <div class="row">
            @foreach (var cat in Model)
            {
                var name = cat.Name?.Trim().ToLower() ?? "";
                string link = linkMap.ContainsKey(name) ? linkMap[name] : null;
                var icon = iconMap.ContainsKey(name) ? iconMap[name] : "icon-folder";
                var img = imageMap.ContainsKey(name) ? imageMap[name] : "~/user/assets/images/services/services-1-1.jpg";
                <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="100ms">
                    <a href="@(link == null ? "#" : Url.Action(link, "UserHome"))" class="text-decoration-none text-dark">
                        <div class="services-one__single">
                            <div class="service-one__img">
                                <img src="@Url.Content(img)" alt="@cat.Name" />
                            </div>
                            <div class="service-one__content">
                                <div class="services-one__icon">
                                    <span class="@icon"></span>
                                </div>
                                <h2 class="service-one__title">@cat.Name</h2>
                                <p class="service-one__text">@cat.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<!--Insurance Page One End-->

<!--Tracking Start-->
<section class="tracking">
    <div class="container">
        <div class="tracking__inner">
            <div class="tracking__left">
                <div class="tracking__icon" aria-hidden="true"><span class="icon-folder"></span></div>
                <div class="tracking__content">
                    <p class="tracking__sub-title">Quisque vel ortor</p>
                    <h3 class="tracking__title">Start tracking your claims</h3>
                </div>
            </div>
            <div class="tracking__btn-box">
                <a href="@Url.Action("makeaclaim", "UserHome")" class="thm-btn tracking__btn">Track Your Claim</a>
            </div>
        </div>
    </div>
</section>
<!--Tracking End-->