@model PolicyPro360.ViewModels.ClaimFormViewModel
@{
    ViewData["Title"] = "File a Claim - PolicyPro360";
    Layout = "_UserDashboardLayout";
}
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
<div class="container-fluid pt-4" id="claim">
    <style>
        #claim {
            margin-top: 150px;
        }

        :root {
            --claim-bg: #171827;
            --claim-card-bg: #1e1f2f;
            --claim-primary: #f5a526;
            --claim-text: #e0e0e0;
            --claim-text-muted: #8a99b5;
            --claim-input-bg: #2a2c3c;
            --claim-border-color: #404258;
        }

        .claim-page-card {
            background-color: var(--claim-card-bg);
            border: none;
            border-radius: 12px;
            color: var(--claim-text);
        }

        .claim-form-control {
            background-color: var(--claim-input-bg);
            border: 1px solid var(--claim-border-color);
            color: var(--claim-text);
            border-radius: 8px;
            padding: 10px;
        }

            .claim-form-control:focus {
                background-color: var(--claim-input-bg);
                border-color: var(--claim-primary);
                color: var(--claim-text);
                box-shadow: 0 0 0 0.2rem rgba(245, 165, 38, 0.25);
            }

            .claim-form-control::placeholder {
                color: var(--claim-text-muted);
            }

        .btn-custom-primary {
            background-color: var(--claim-primary);
            border-color: var(--claim-primary);
            color: var(--claim-bg);
            font-weight: 600;
            padding: 10px 25px;
            border-radius: 8px;
        }

            .btn-custom-primary:hover {
                background-color: #d8901e;
                border-color: #d8901e;
                color: var(--claim-bg);
            }

        .btn-custom-secondary {
            background-color: transparent;
            border: 1px solid var(--claim-border-color);
            color: var(--claim-text-muted);
            padding: 10px 25px;
            border-radius: 8px;
        }

            .btn-custom-secondary:hover {
                background-color: var(--claim-border-color);
                color: var(--claim-text);
            }

        /* Custom File Upload */
        .file-upload-wrapper {
            border: 2px dashed var(--claim-border-color);
            border-radius: 8px;
            padding: 2rem;
            text-align: center;
            cursor: pointer;
            transition: border-color 0.2s ease;
        }

            .file-upload-wrapper:hover {
                border-color: var(--claim-primary);
            }

            .file-upload-wrapper i {
                font-size: 2.5rem;
                color: var(--claim-primary);
            }
    </style>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- File a Claim Card -->
            <div class="card claim-page-card">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <i class="ti ti-file-invoice"
                           style="font-size: 3rem; color: var(--claim-primary);"></i>
                    </div>
                    <h4 class="fw-semibold text-center mb-2 text-white">File an Insurance Claim</h4>
                    <p class="text-center text-muted mb-5">
                        Please provide accurate information to ensure a smooth process.
                    </p>

                    <!-- Important Notice Box -->
                    <div class="alert alert-warning" role="alert"
                         style="background-color: rgba(245, 165, 38, 0.1); border-color: var(--claim-primary); color: var(--claim-primary);">
                        <i class="ti ti-alert-circle me-2"></i>
                        <strong>Important:</strong> Please report the incident as soon as possible.
                    </div>

                    <!-- File a Claim Form -->
                    <form asp-action="FileClaim" enctype="multipart/form-data" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="SelectedCategoryId" class="form-label text-white">Select Company</label>
                            <select asp-for="SelectedCategoryId" class="form-select " id="SelectedCategoryId">
                                <option value="">-- Select Category --</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedCategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SelectedPolicyId" class="form-label text-white"></label>
                            <select asp-for="SelectedPolicyId" class="form-select " id="SelectedPolicyId">
                                <option value="">-- Select Policy --</option>
                            </select>
                            <span asp-validation-for="SelectedPolicyId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfIncident" class="form-label text-white"></label>
                            <input asp-for="DateOfIncident" class="form-control " type="date" />
                            <span asp-validation-for="DateOfIncident" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClaimedAmount" class="form-label text-white"></label>
                            <input asp-for="ClaimedAmount" class="form-control " type="number" step="0.01" />
                            <span asp-validation-for="ClaimedAmount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserRequest" class="form-label text-white"></label>
                            <textarea asp-for="UserRequest" class="form-control ">Describe your request...</textarea>
                            <span asp-validation-for="UserRequest" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IncidentDetails" class="form-label text-white"></label>
                            <textarea asp-for="IncidentDetails" class="form-control ">Describe your incident details...</textarea>
                            <span asp-validation-for="IncidentDetails" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SupportingDocuments" class="form-label text-white"></label>
                            <input asp-for="SupportingDocuments" type="file" class="form-control" multiple />
                            <span asp-validation-for="SupportingDocuments" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit Claim</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Page Content -->
<!-- ============================================================== -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#SelectedCategoryId').change(function () {
                var categoryId = $(this).val();
                $('#SelectedPolicyId').html('<option>Loading...</option>');
                if (categoryId) {
                    $.getJSON('@Url.Action("GetPoliciesByCategory", "UserHome")', { categoryId: categoryId }, function (data) {
                        $('#SelectedPolicyId').html('<option value="">-- Select Policy --</option>');
                        $.each(data, function (i, policy) {
                            $('#SelectedPolicyId').append('<option value="' + policy.id + '">' + policy.name + '</option>');
                        });
                    });
                } else {
                    $('#SelectedPolicyId').html('<option value="">-- Select Policy --</option>');
                }
            });
        });
    </script>
}
