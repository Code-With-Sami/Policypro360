@model PolicyPro360.ViewModels.PremiumCalculationViewModel

@{
    ViewData["Title"] = "Your Premium Quote - PolicyPro360";
    Layout = "_UserLayout";
}

<style>


    .premium-result-page {
      
        padding: 80px 0;
    }

    /* --- The Main Result Card --- */
    .result-card {
        background: #171827;
        border: 1px solid rgba(245, 165, 38, 0.2);
        color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.3);
        text-align: left;
    }

        /* --- Card Header with Icon --- */
        .result-card .card-header {
            background-color: #2a2c41;
            padding: 30px;
            text-align: center;
            border-bottom: none;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .result-card .header-icon {
            font-size: 3rem;
            color: #28a745;
            margin-bottom: 15px;
        }

        .result-card .header-title {
            color: #ffffff;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .result-card .header-subtitle {
            color: #a9b3c1;
            font-size: 1rem;
        }

        /* --- Card Body with Sections --- */
        .result-card .card-body {
            padding: 30px 35px;
        }

    .summary-section {
        margin-bottom: 25px;
        padding-bottom: 25px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

        .summary-section:last-of-type {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .section-title {
        color: #a9b3c1;
        font-size: 0.9rem;
        text-transform: uppercase;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
        font-size: 1rem;
    }

        .detail-row .detail-label {
            color: #a9b3c1;
        }

        .detail-row .detail-value {
            color: #ffffff;
            font-weight: 500;
        }

    /* --- Final Premium Display --- */
    .final-premium-display {
        background-color: #2a2c41;
        border-radius: 12px;
        padding: 25px;
        text-align: center;
    }

        .final-premium-display .premium-label {
            color: #a9b3c1;
            font-size: 1rem;
            margin-bottom: 10px;
        }

        .final-premium-display .premium-amount {
            font-size: 3rem;
            font-weight: 700;
            color: #f5a526; 
            line-height: 1.2;
        }

            .final-premium-display .premium-amount small {
                font-size: 1.5rem;
                font-weight: 500;
            }

    /* --- Action Buttons --- */
    .action-buttons {
        padding: 0 35px 35px 35px; 
    }

</style>

<!-- Page Header (Optional) -->
<section class="page-header">
    <div class="page-header-bg" style="background-image: url('@Url.Content("~/user/assets/images/backgrounds/loan-policy-bg.jpg")')"></div>
    <div class="page-header-shape-1"><img src="@Url.Content("~/user/assets/images/shapes/page-header-shape-1.png")" alt=""></div>
    <div class="container">
        <div class="page-header__inner">
            <ul class="thm-breadcrumb list-unstyled">
                <li><a href="/">Home</a></li>
                <li><span>/</span></li>
                <li><a href="@Url.Action("Policy", "UserHome")">Policies</a></li>
                <li><span>/</span></li>
                <li>Quote</li>
            </ul>
            <h2>Your Premium Quote</h2>
        </div>
    </div>
</section>
<!-- Page Header End -->


<section class="premium-result-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card result-card">
                    <div class="card-header">
                        <div class="header-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <h3 class="header-title">Your Quote is Ready!</h3>
                        <p class="header-subtitle">Please review the details below before proceeding.</p>
                    </div>
                    <div class="card-body">
                        <!-- Policy Details Section -->
                        <div class="summary-section">
                            <h5 class="section-title">Policy Details</h5>
                            <div class="detail-row">
                                <span class="detail-label">Policy Name</span>
                                <span class="detail-value">@Model.PolicyName</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Policy Type</span>
                                <span class="detail-value">@Model.PolicyType</span>
                            </div>
                        </div>

                        <!-- User Inputs Section -->
                        <div class="summary-section">
                            <h5 class="section-title">Your Details</h5>
                            @if (Model.UserAge.HasValue)
                            {
                                <div class="detail-row">
                                    <span class="detail-label">Your Age</span>
                                    <span class="detail-value">@Model.UserAge years</span>
                                </div>
                            }
                            @if (Model.NumberOfDependents.HasValue)
                            {
                                <div class="detail-row">
                                    <span class="detail-label">Number of People Covered</span>
                                    <span class="detail-value">@Model.NumberOfDependents</span>
                                </div>
                            }
                            @if (Model.VehicleValue.HasValue)
                            {
                                <div class="detail-row">
                                    <span class="detail-label">Vehicle Value</span>
                                    <span class="detail-value">PKR @Model.VehicleValue?.ToString("N0")</span>
                                </div>
                            }
                            @if (Model.PropertyValue.HasValue)
                            {
                                <div class="detail-row">
                                    <span class="detail-label">Property Value</span>
                                    <span class="detail-value">PKR @Model.PropertyValue?.ToString("N0")</span>
                                </div>
                            }
                        </div>

                        <!-- Final Premium -->
                        <div class="final-premium-display">
                            <div class="premium-label">Your Estimated Annual Premium</div>
                            <div class="premium-amount">
                                <small>PKR</small> @Model.CalculatedPremium?.ToString("N0")
                            </div>
                        </div>

                    </div>
                    <div class="action-buttons">
                        <form asp-action="ProceedToCheckout" asp-controller="UserHome" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="PolicyId" />
                            <input type="hidden" asp-for="PolicyName" />
                            <input type="hidden" asp-for="PolicyType" />
                            <input type="hidden" asp-for="CalculatedPremium" />
                            <input type="hidden" asp-for="VehicleValue" />
                            <input type="hidden" asp-for="LifeCoverageAmount" />
                            <input type="hidden" asp-for="PropertyValue" />
                            <input type="hidden" asp-for="UserAge" />
                            <input type="hidden" asp-for="NumberOfDependents" />
                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-shopping-cart me-2"></i> Proceed to Buy
                                </button>
                                <a asp-action="CalculatePremium" asp-route-id="@Model.PolicyId" class="btn btn-outline-light">Make Changes & Recalculate</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>