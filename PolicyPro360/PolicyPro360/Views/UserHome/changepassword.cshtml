@model PolicyPro360.Models.Users
@{
    ViewData["Title"] = "Change Password - PolicyPro360";
    Layout = "_UserDashboardLayout";
}
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
<div class="container-fluid pt-4" id="change">
    <!-- Custom Styles for Change Password Page -->
    <style>
        #change {
            margin-top: 150px;
        }

        :root {
            --profile-bg: #171827;
            --profile-card-bg: #1e1f2f;
            --profile-primary: #f5a526;
            --profile-text: #e0e0e0;
            --profile-text-muted: #8a99b5;
            --profile-input-bg: #2a2c3c;
            --profile-border-color: #404258;
        }

        .password-page-card {
            background-color: var(--profile-card-bg);
            border: none;
            border-radius: 12px;
            color: var(--profile-text);
        }

        .password-form-control {
            background-color: var(--profile-input-bg);
            border: 1px solid var(--profile-border-color);
            color: var(--profile-text);
            border-radius: 8px;
            padding: 10px;
        }

            .password-form-control:focus {
                background-color: var(--profile-input-bg);
                border-color: var(--profile-primary);
                color: var(--profile-text);
                box-shadow: 0 0 0 0.2rem rgba(245, 165, 38, 0.25);
            }

            .password-form-control::placeholder {
                color: var(--profile-text-muted);
            }

        .btn-custom-primary {
            background-color: var(--profile-primary);
            border-color: var(--profile-primary);
            color: var(--profile-bg);
            font-weight: 600;
            padding: 10px 25px;
            border-radius: 8px;
        }

            .btn-custom-primary:hover {
                background-color: #d8901e;
                border-color: #d8901e;
                color: var(--profile-bg);
            }

        .btn-custom-secondary {
            background-color: transparent;
            border: 1px solid var(--profile-border-color);
            color: var(--profile-text-muted);
            padding: 10px 25px;
            border-radius: 8px;
        }

            .btn-custom-secondary:hover {
                background-color: var(--profile-border-color);
                color: var(--profile-text);
            }

        .form-text {
            color: var(--profile-text-muted);
        }
    </style>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Change Password Card -->
            <div class="card password-page-card">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <i class="ti ti-lock" style="font-size: 3rem; color: var(--profile-primary);"></i>
                    </div>
                    <h4 class="fw-semibold text-center mb-2 text-white">Change Password</h4>
                    <p class="text-center text-muted mb-5">
                        Your new password must be different from previous used passwords.
                    </p>

                    <!-- Change Password Form -->
                    <form asp-action="ChangePassword" method="POST">

                        <div class="mb-4">
                            <label for="currentPassword" class="form-label text-white">Current Password</label>
                            <input type="password" class="form-control password-form-control" id="currentPassword"
                                   name="CurrentPassword" placeholder="Enter your current password" required />
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label text-white">New Password</label>
                            <input name="Password" type="password" class="form-control password-form-control" id="newPassword" placeholder="Enter a new password" required />
                            <div id="passwordHelp" class="form-text mt-2">
                                Must be at least 8 characters long.
                            </div>
                        </div>

                        <div class="mb-5">
                            <label for="confirmPassword" class="form-label text-white">Confirm New Password</label>
                            <input name="ConfirmPassword" type="password" class="form-control password-form-control" id="confirmPassword" placeholder="Confirm your new password" required />
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-end gap-3">
                            <a href="@Url.Action("profile","UserHome")" class="btn btn-custom-secondary">Cancel</a>
                            <button type="submit" class="btn btn-custom-primary">Update Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Page Content -->
<!-- ============================================================== -->