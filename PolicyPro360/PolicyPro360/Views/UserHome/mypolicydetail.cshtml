@model PolicyPro360.Models.UserPolicy

@{
    ViewData["Title"] = "My Policy Detail - PolicyPro360";
    Layout = "_UserDashboardLayout";
}
@functions{
    string GetAttribute(string key) {
        var attr = Model.Policy?.Attributes?.FirstOrDefault(a => a.Key.ToLower() == key.ToLower());
        return attr?.Value ?? "-";
    }
}
@{
    var policyType = (Model.Policy?.Category?.Name ?? "").ToLower();
    bool showNomineeSection = policyType.Contains("life") || policyType.Contains("medical");
}
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
<div class="container-fluid pt-4" id="details">
    <!-- Custom Styles for Policy Details Page -->
    <style>
        #details {
            margin-top: 160px;
        }

        :root {
            --details-bg: #171827;
            --details-card-bg: #1e1f2f;
            --details-primary: #f5a526;
            --details-text: #e0e0e0;
            --details-text-muted: #8a99b5;
            --details-border-color: #2a2c3c;
        }

        .details-card {
            background-color: var(--details-card-bg);
            border: 1px solid var(--details-border-color);
            border-radius: 12px;
            color: var(--details-text);
        }

        .policy-header {
            border-bottom: 1px solid var(--details-border-color);
        }

        .info-item {
            display: flex;
            align-items: flex-start;
            padding: 1.25rem 0;
            border-bottom: 1px solid var(--details-border-color);
        }

            .info-item:last-of-type {
                border-bottom: none;
            }

        .info-icon {
            color: var(--details-primary);
            font-size: 1.5rem;
            margin-right: 1.25rem;
            min-width: 30px;
            text-align: center;
        }

        .info-content .info-label {
            display: block;
            color: var(--details-text-muted);
            font-size: 0.9rem;
            margin-bottom: 0.25rem;
        }

        .info-content .info-value {
            display: block;
            color: var(--details-text);
            font-weight: 600;
            font-size: 1rem;
        }

        .badge-active {
            background-color: rgba(40, 199, 111, 0.1);
            color: #28c76f;
        }

        .action-list a {
            display: flex;
            align-items: center;
            padding: 1rem;
            color: var(--details-text);
            text-decoration: none;
            border-radius: 8px;
            transition: background-color 0.2s ease;
        }

            .action-list a:hover {
                background-color: var(--details-border-color);
            }

        .action-list i {
            color: var(--details-primary);
        }
    </style>

    <div class="row">
        <!-- Left Column: Policy Information -->
        <div class="col-lg-8">
            <div class="card details-card">
                <div class="card-body p-4">
                    <!-- Header -->
                    <div class="policy-header pb-4 mb-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h4 class="fw-bolder text-white mb-1">@Model.Policy.Name</h4>
                                <small class="text-muted">Policy No: @Model.PolicyId</small>
                            </div>
                            <span class="badge badge-active rounded-pill px-3 py-2 fs-2">@Model.Status</span>
                        </div>
                    </div>

                    <!-- Key Details -->
                    <h5 class="mb-3 fw-semibold text-white">Key Details</h5>
                    <div class="row">
                        
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="ti ti-report-money info-icon"></i>
                          
                                <div class="info-content">
                                    <span class="info-label">Premium</span>
                                    <span class="info-value">@Model.CalculatedPremium.ToString("N0")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="ti ti-calendar-plus info-icon"></i>
                                <div class="info-content">
                                    <span class="info-label">Start Date</span>
                                    <span class="info-value">@Model.PurchaseDate.ToString("MMMM dd, yyyy")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="ti ti-calendar-off info-icon"></i>
                                <div class="info-content">
                                    <span class="info-label">End Date</span>
                                    <span class="info-value">@Model.ExpiryDate.ToString("MMMM dd, yyyy")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                 
                    @if (policyType.Contains("life"))
                    {
                        <!-- Life Insurance Specific Info -->
                        <h5 class="mt-5 mb-3 fw-semibold text-white">Nominee & Insured Details</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="info-item">
                                    <i class="ti ti-user-check info-icon"></i>
                                    <div class="info-content">
                                        <span class="info-label">Person Insured</span>
                                        <span class="info-value">@ViewBag.name</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="info-item">
                                    <i class="ti ti-users info-icon"></i>
                                    <div class="info-content">
                                        <span class="info-label">Nominee</span>
                                        <span class="info-value">@ViewBag.name (Spouse)</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="info-item">
                                    <i class="ti ti-currency-dollar info-icon"></i>
                                    <div class="info-content">
                                        <span class="info-label">Coverage Amount</span>
                                        <span class="info-value">@Model.CoverageAmount.ToString("N0") PKR</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (policyType.Contains("medical"))
                    {
                        <!-- Medical Insurance Specific Info -->
                        <h5 class="mt-5 mb-3 fw-semibold text-white">Medical Coverage Details</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="info-item">
                                    <i class="ti ti-user-check info-icon"></i>
                                    <div class="info-content">
                                        <span class="info-label">Person Insured</span>
                                        <span class="info-value">@ViewBag.name</span>
                                    </div>
                                </div>
                            </div>
                             <div class="col-md-4">
                                <div class="info-item">
                                    <i class="ti ti-users info-icon"></i>
                                    <div class="info-content">
                                        <span class="info-label">Nominee</span>
                                        <span class="info-value">@ViewBag.name (Spouse)</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="info-item">
                                    <i class="ti ti-users info-icon"></i>
                                    <div class="info-content">
                                        <span class="info-label">Dependents</span>
                                        <span class="info-value">@Model.CoverageAmount.ToString("N0")</span>
                                    </div>
                                </div>
                            </div>
                           
                        </div>
                    }
                    else if (policyType.Contains("home"))
                    {
                        <!-- Home Insurance Specific Info -->
                        <h5 class="mt-5 mb-3 fw-semibold text-white">Property Details</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="ti ti-home info-icon"></i>
                                    <div class="info-content">
                                        <span class="info-label">Property Value</span>
                                        <span class="info-value">@Model.CoverageAmount.ToString("N0") PKR</span>
                                    </div>
                                </div>
                            </div>
                      
                            <!-- Add more fields as needed -->
                        </div>
                    }
                    else if (policyType.Contains("motor"))
                    {
                        <!-- Motor Insurance Specific Info -->
                        <h5 class="mt-5 mb-3 fw-semibold text-white">Vehicle Details</h5>
                        <div class="row">
                           
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="ti ti-currency-dollar info-icon"></i>
                                    <div class="info-content">
                                        <span class="info-label">Vehicle Value</span>
                                        <span class="info-value">@Model.CoverageAmount.ToString("N0") PKR</span>
                                    </div>
                                </div>
                            </div>
               
                        </div>
                    }
                    
                </div>
            </div>
        </div>

        <!-- Right Column: Actions and Documents -->
        <div class="col-lg-4">
            <!-- Actions Card -->
            <div class="card details-card mb-4">
                <div class="card-body p-3">
                    <h5 class="p-3 mb-0 fw-semibold text-white">Quick Actions</h5>
                    <ul class="list-unstyled action-list">
                        <li>
                            <a href="@Url.Action("makepayment", "UserHome")"><i class="ti ti-wallet me-3 fs-5"></i> Pay Premium</a>
                        </li>
                        <li>
                            <a href="@Url.Action("fileclaim", "UserHome")">
                                <i class="ti ti-clipboard-plus me-3 fs-5"></i> File a
                                Claim
                            </a>
                        </li>
                        <li>
                            <a href ="@Url.Action("applyloan", "UserHome")">
                                <i class="ti ti-cash me-3 fs-5"></i> Apply for
                                Loan
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Documents Card -->
            <div class="card details-card">
                <div class="card-body p-3">
                    <h5 class="p-3 mb-0 fw-semibold text-white">Documents & Prints</h5>
                    <ul class="list-unstyled action-list">
                   
                      
                        <li>
                            <a href="#" onclick="printPolicyDetails()">
                                <i class="ti ti-printer me-3 fs-5"></i> Print Policy Details
                            </a>
                        </li>
                      
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/print-functions.js"></script>
<script>

    var policyData = {
        name: '@Model.Policy?.Name?.Replace("'", "\\'")',
        id: '@Model.PolicyId',
        coverageAmount: '@Model.CoverageAmount.ToString("N0")',
        premium: '@Model.CalculatedPremium.ToString("N0")',
        startDate: '@Model.PurchaseDate.ToString("MMMM dd, yyyy")',
        endDate: '@Model.ExpiryDate.ToString("MMMM dd, yyyy")',
        status: '@Model.Status',
        description: '@Model.Policy?.Description?.Replace("'", "\\'").Replace("\r\n", "<br>")'
    };

 
</script>
<!-- ============================================================== -->
<!-- End Page Content -->
<!-- ============================================================== -->