@{
    ViewData["Title"] = "My Policy Detail - PolicyPro360";
    Layout = "_UserDashboardLayout";
}
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
<div class="container-fluid pt-4" id="details">
    <!-- Custom Styles for Policy Details Page -->
    <style>
        #details {
            margin-top: 160px;
        }

        :root {
            --details-bg: #171827;
            --details-card-bg: #1e1f2f;
            --details-primary: #f5a526;
            --details-text: #e0e0e0;
            --details-text-muted: #8a99b5;
            --details-border-color: #2a2c3c;
        }

        .details-card {
            background-color: var(--details-card-bg);
            border: 1px solid var(--details-border-color);
            border-radius: 12px;
            color: var(--details-text);
        }

        .policy-header {
            border-bottom: 1px solid var(--details-border-color);
        }

        .info-item {
            display: flex;
            align-items: flex-start;
            padding: 1.25rem 0;
            border-bottom: 1px solid var(--details-border-color);
        }

            .info-item:last-of-type {
                border-bottom: none;
            }

        .info-icon {
            color: var(--details-primary);
            font-size: 1.5rem;
            margin-right: 1.25rem;
            min-width: 30px;
            text-align: center;
        }

        .info-content .info-label {
            display: block;
            color: var(--details-text-muted);
            font-size: 0.9rem;
            margin-bottom: 0.25rem;
        }

        .info-content .info-value {
            display: block;
            color: var(--details-text);
            font-weight: 600;
            font-size: 1rem;
        }

        .badge-active {
            background-color: rgba(40, 199, 111, 0.1);
            color: #28c76f;
        }

        .action-list a {
            display: flex;
            align-items: center;
            padding: 1rem;
            color: var(--details-text);
            text-decoration: none;
            border-radius: 8px;
            transition: background-color 0.2s ease;
        }

            .action-list a:hover {
                background-color: var(--details-border-color);
            }

        .action-list i {
            color: var(--details-primary);
        }
    </style>

    <div class="row">
        <!-- Left Column: Policy Information -->
        <div class="col-lg-8">
            <div class="card details-card">
                <div class="card-body p-4">
                    <!-- Header -->
                    <div class="policy-header pb-4 mb-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h4 class="fw-bolder text-white mb-1">Max Life Health Plan</h4>
                                <small class="text-muted">Policy No: #HLTH-12345678</small>
                            </div>
                            <span class="badge badge-active rounded-pill px-3 py-2 fs-2">Active</span>
                        </div>
                    </div>

                    <!-- Key Details -->
                    <h5 class="mb-3 fw-semibold text-white">Key Details</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="ti ti-umbrella info-icon"></i>
                                <div class="info-content">
                                    <span class="info-label">Coverage Amount</span>
                                    <span class="info-value">$100,000</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="ti ti-report-money info-icon"></i>
                                <div class="info-content">
                                    <span class="info-label">Premium</span>
                                    <span class="info-value">$150.00 / Monthly</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="ti ti-calendar-plus info-icon"></i>
                                <div class="info-content">
                                    <span class="info-label">Start Date</span>
                                    <span class="info-value">15 Dec, 2022</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="ti ti-calendar-off info-icon"></i>
                                <div class="info-content">
                                    <span class="info-label">End Date</span>
                                    <span class="info-value">14 Dec, 2025</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Nominee Details -->
                    <h5 class="mt-5 mb-3 fw-semibold text-white">Nominee & Insured Details</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="ti ti-user-check info-icon"></i>
                                <div class="info-content">
                                    <span class="info-label">Person Insured</span>
                                    <span class="info-value">John Doe</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="ti ti-users info-icon"></i>
                                <div class="info-content">
                                    <span class="info-label">Nominee</span>
                                    <span class="info-value">Jane Doe (Spouse)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Actions and Documents -->
        <div class="col-lg-4">
            <!-- Actions Card -->
            <div class="card details-card mb-4">
                <div class="card-body p-3">
                    <h5 class="p-3 mb-0 fw-semibold text-white">Quick Actions</h5>
                    <ul class="list-unstyled action-list">
                        <li>
                            <a href="payment.html"><i class="ti ti-wallet me-3 fs-5"></i> Pay Premium</a>
                        </li>
                        <li>
                            <a href="file_claim.html">
                                <i class="ti ti-clipboard-plus me-3 fs-5"></i> File a
                                Claim
                            </a>
                        </li>
                        <li>
                            <a href="apply_loan.html">
                                <i class="ti ti-cash me-3 fs-5"></i> Apply for
                                Loan
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Documents Card -->
            <div class="card details-card">
                <div class="card-body p-3">
                    <h5 class="p-3 mb-0 fw-semibold text-white">Documents</h5>
                    <ul class="list-unstyled action-list">
                        <li>
                            <a href="#">
                                <i class="ti ti-file-text me-3 fs-5"></i> Download Policy
                                Document
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="ti ti-receipt-2 me-3 fs-5"></i> Download Premium
                                Receipt
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="ti ti-certificate me-3 fs-5"></i> Download Tax
                                Certificate
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Page Content -->
<!-- ============================================================== -->