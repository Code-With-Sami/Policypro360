@model List<PolicyPro360.Models.FAQ>
@{
    ViewData["Title"] = "Faqs - PolicyPro360";
    Layout = "_UserLayout";
}

<!--Page Header Start-->
<section class="page-header">
    <div class="page-header-bg" style="background-image: url('@Url.Content("~/user/assets/images/backgrounds/faq.jpg")')">
    </div>
    <div class="page-header-shape-1"><img src="~/user/assets/images/shapes/page-header-shape-1.png" alt=""></div>
    <div class="container">
        <div class="page-header__inner">
            <ul class="thm-breadcrumb list-unstyled">
                <li><a href="index.html">Home</a></li>
                <li><span>/</span></li>
                <li>FAQs</li>
            </ul>
            <h2>Frequently Asked Questions</h2>
        </div>
    </div>
</section>
<!--Page Header End-->
<!--FAQ One Start-->
<section class="faq-one">
    <div class="container">
        <div class="row">
            @if (Model != null && Model.Any())
            {
                var leftColumnFaqs = Model.Take((Model.Count + 1) / 2).ToList();
                var rightColumnFaqs = Model.Skip((Model.Count + 1) / 2).ToList();

                <!-- Left Column of FAQs -->
                <div class="col-xl-6 col-lg-6">
                    <div class="faq-one__single">
                        <div class="accrodion-grp faq-one-accrodion" data-grp-name="faq-one-accrodion-1">
                            @for (int i = 0; i < leftColumnFaqs.Count; i++)
                            {
                                var faq = leftColumnFaqs[i];
                                var isActive = i == 0 ? "active" : "";
                                var isLastChild = i == leftColumnFaqs.Count - 1 ? "last-chiled" : "";
                                
                                <div class="accrodion @isActive @isLastChild">
                                    <div class="accrodion-title">
                                        <h4><span>?</span> @faq.Question</h4>
                                    </div>
                                    <div class="accrodion-content">
                                        <div class="inner">
                                            <p>@faq.Answer</p>
                                        </div><!-- /.inner -->
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                
                <!-- Right Column of FAQs -->
                <div class="col-xl-6 col-lg-6">
                    <div class="faq-one__single">
                        <div class="accrodion-grp faq-one-accrodion" data-grp-name="faq-one-accrodion-2">
                            @for (int i = 0; i < rightColumnFaqs.Count; i++)
                            {
                                var faq = rightColumnFaqs[i];
                                var isActive = i == 0 ? "active" : "";
                                var isLastChild = i == rightColumnFaqs.Count - 1 ? "last-chiled" : "";
                                
                                <div class="accrodion @isActive @isLastChild">
                                    <div class="accrodion-title">
                                        <h4><span>?</span> @faq.Question</h4>
                                    </div>
                                    <div class="accrodion-content">
                                        <div class="inner">
                                            <p>@faq.Answer</p>
                                        </div><!-- /.inner -->
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- No FAQs Available -->
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="material-icons-outlined" style="font-size: 4rem; color: #ccc;">help_outline</i>
                        <h5 class="mt-3 text-muted">No FAQs Available</h5>
                        <p class="text-muted">We're working on adding frequently asked questions. Please check back later or contact our support team.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--FAQ One End-->
<!--Contact Page Start-->
<section class="contact-page contact-page--two">
    <div class="contact-page-two-shape-1"
         style="background-image: url(~/user/assets/images/shapes/contact-page-two-shape-1.png);"></div>
    <div class="contact-page-two-shape-2"
         style="background-image: url(~/user/assets/images/shapes/contact-page-two-shape-2.png);"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5">
                <div class="contact-page__left">
                    <div class="section-title text-left">
                        <div class="section-sub-title-box">
                            <p class="section-sub-title">Contact us</p>
                            <div class="section-title-shape-1">
                                <img src="~/user/assets/images/shapes/section-title-shape-1.png" alt="">
                            </div>
                            <div class="section-title-shape-2">
                                <img src="~/user/assets/images/shapes/section-title-shape-2.png" alt="">
                            </div>
                        </div>
                        <h2 class="section-title__title">Feel free to get in touch with experts</h2>
                    </div>
                    <div class="contact-page__call-email">
                        <div class="contact-page__call-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-page__call-email-content">
                            <h4>
                                <a href="tel:+92 3800 8060" class="contact-page__call-number">+92 3800 8060</a>
                                <a href="mailto:support@policypro360.com"
                                   class="contact-page__email">support@policypro360.com</a>
                            </h4>
                        </div>
                    </div>
                    <p class="contact-page__location-text">Suite 705, Business Avenue,  <br> Shahrah-e-Faisal, Karachi, Pakistan</p>
                </div>
            </div>
            <div class="col-xl-8 col-lg-7">
                <div class="contact-page__right">
                    <div class="contact-page__form">
                        <form action="https://pixydrops.com/insur-html/main-html/~/user/assets/inc/sendemail.php" class="comment-one__form contact-form-validated"
                              novalidate="novalidate">
                            <div class="row">
                                <div class="col-xl-6">
                                    <div class="comment-form__input-box">
                                        <input type="text" placeholder="Your name" name="name">
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="comment-form__input-box">
                                        <input type="email" placeholder="Email address" name="email">
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="comment-form__input-box">
                                        <input type="text" placeholder="Phone number" name="phone">
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="comment-form__input-box">
                                        <input type="text" placeholder="Subject" name="subject">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="comment-form__input-box text-message-box">
                                        <textarea name="message" placeholder="Write a message"></textarea>
                                    </div>
                                    <div class="comment-form__btn-box">
                                        <button type="submit" class="thm-btn comment-form__btn">
                                            Send a
                                            Message
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Contact Page End-->