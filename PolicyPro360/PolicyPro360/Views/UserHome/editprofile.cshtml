@model PolicyPro360.Models.Users
@{
    ViewData["Title"] = "Edit User Profile - PolicyPro360";
    Layout = "_UserDashboardLayout";
}
<div class="container-fluid pt-4 mt-5" id="edit">

    <style>
        #edit {
            margin-top: 120px !important;
        }

        :root {
            --profile-bg: #171827;
            --profile-card-bg: #1e1f2f;
            --profile-primary: #f5a526;
            --profile-text: #e0e0e0;
            --profile-text-muted: #8a99b5;
            --profile-input-bg: #2a2c3c;
            --profile-border-color: #404258;
        }

        .profile-page-card {
            background-color: var(--profile-card-bg);
            border: none;
            border-radius: 12px;
            color: var(--profile-text);
        }

        .profile-form-control {
            background-color: var(--profile-input-bg);
            border: 1px solid var(--profile-border-color);
            color: var(--profile-text);
            border-radius: 8px;
            padding: 10px;
        }

            .profile-form-control:focus {
                background-color: var(--profile-input-bg);
                border-color: var(--profile-primary);
                color: var(--profile-text);
                box-shadow: 0 0 0 0.2rem rgba(245, 165, 38, 0.25);
            }

            .profile-form-control::placeholder {
                color: var(--profile-text-muted);
            }

            .profile-form-control:read-only {
                background-color: #252635;
                cursor: not-allowed;
            }

        .btn-custom-primary {
            background-color: var(--profile-primary);
            border-color: var(--profile-primary);
            color: var(--profile-bg);
            font-weight: 600;
            padding: 10px 25px;
            border-radius: 8px;
        }

            .btn-custom-primary:hover {
                background-color: #d8901e;
                border-color: #d8901e;
                color: var(--profile-bg);
            }

        .btn-custom-secondary {
            background-color: transparent;
            border: 1px solid var(--profile-border-color);
            color: var(--profile-text-muted);
            padding: 10px 25px;
            border-radius: 8px;
        }

            .btn-custom-secondary:hover {
                background-color: var(--profile-border-color);
                color: var(--profile-text);
            }

        .profile-image-container {
            position: relative;
            width: 150px;
            height: 150px;
            margin: 0 auto;
        }

        .profile-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid var(--profile-primary);
        }

        .profile-image-upload-label {
            position: absolute;
            bottom: 5px;
            right: 5px;
            background-color: var(--profile-bg);
            color: var(--profile-primary);
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border: 2px solid var(--profile-primary);
            transition: all 0.3s ease;
        }

            .profile-image-upload-label:hover {
                background-color: var(--profile-primary);
                color: var(--profile-bg);
            }
    </style>

    <div class="row mt-5">
        <!-- Left Column: Profile Picture & Security -->
        <div class="col-lg-4">
            <div class="card profile-page-card mb-4">
                <div class="card-body text-center p-4">
                    <h5 class="mb-4 fw-semibold text-white">Profile Picture</h5>
                    <div class="profile-image-container mb-3">
                        <img src="~/admin/assets/images/profiles/@Model.ProfileImagePath" alt="Profile Picture"
                             class="profile-image" id="profileImagePreview" />
                        <label for="profileImageInput" class="profile-image-upload-label"
                               title="Change Picture">
                            <i class="ti ti-camera fs-6"></i>
                        </label>
                    </div>
                    <p class="fs-2 text-white">
                        Click on the camera icon to choose a new photo.
                    </p>
                </div>
            </div>

            <!-- Security Notice -->
            <div class="card profile-page-card">
                <div class="card-body p-4">
                    <h5 class="mb-3 fw-semibold text-white">Account Security</h5>
                    <p class="fs-2 text-muted">
                        To change your password, please visit the security settings
                        page. For your protection, password changes are handled
                        separately from profile updates.
                    </p>
                    <a href="@Url.Action("changepassword", "UserHome")" class="btn btn-custom-secondary w-100 mt-2">
                        Change
                        Password
                    </a>
                </div>
            </div>
        </div>

        <!-- Right Column: Edit Account Details Form -->
        <div class="col-lg-8">
            <div class="card profile-page-card ">
                <div class="card-body p-4">
                    <h5 class="mb-4 fw-semibold text-white">Edit Account Information</h5>

                    <!-- Main Form for Profile Update -->
                    <form asp-action="EditProfile" method="POST" enctype="multipart/form-data">

                        @Html.AntiForgeryToken()

                        <input asp-for="Id" type="hidden" />

                        <!-- Hidden file input for profile image -->
                        <input type="file" id="profileImageInput" name="ProfileImage" class="d-none"
                               accept="image/*"
                               onchange="document.getElementById('profileImagePreview').src = window.URL.createObjectURL(this.files[0])" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="fullName" class="form-label text-white">Full Name</label>
                                <input asp-for="Name" type="text" class="form-control profile-form-control" id="fullName" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="username" class="form-label text-white">Username</label>
                                <input asp-for="Username" type="text" class="form-control profile-form-control" id="username" readonly />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label text-white">Email Address</label>
                                <input asp-for="Email" type="email" class="form-control profile-form-control" id="email" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="mobileNumber" class="form-label text-white">
                                    Mobile
                                    Number
                                </label>
                                <input asp-for="MobileNumber" type="tel" class="form-control profile-form-control" id="mobileNumber" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="dateOfBirth" class="form-label text-white">Date of Birth</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control profile-form-control" id="dateOfBirth" required />
                        </div>

                        <div class="mb-4">
                            <label for="address" class="form-label text-white">Address</label>
                            <textarea asp-for="Address" class="form-control profile-form-control" id="address" rows="4" required></textarea>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-end gap-3">
                            <a href="@Url.Action("profile","UserHome")" class="btn btn-custom-secondary">Cancel</a>
                            <button type="submit" class="btn btn-custom-primary">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
