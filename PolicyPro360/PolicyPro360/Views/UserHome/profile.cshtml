@model PolicyPro360.Models.Users
@{
    ViewData["Title"] = "User Profile - PolicyPro360";
    Layout = "_UserDashboardLayout";
}

<div class="body-wrapper-inner">
    <div class="container-fluid">
        <!-- Custom Styles -->
        <style>
            :root {
                --profile-bg: #171827;
                --profile-card-bg: #1e1f2f;
                --profile-primary: #f5a526;
                --profile-text: #e0e0e0;
                --profile-text-muted: #8a99b5;
                --profile-border-color: #2a2c3c;
            }

            .profile-view-card {
                background-color: var(--profile-card-bg);
                border: 1px solid var(--profile-border-color);
                border-radius: 12px;
                color: var(--profile-text);
            }

            .profile-image-view {
                width: 150px;
                height: 150px;
                object-fit: cover;
                border-radius: 50%;
                border: 4px solid var(--profile-primary);
                box-shadow: 0 0 15px rgba(245, 165, 38, 0.3);
            }

            .btn-custom-primary {
                background-color: var(--profile-primary);
                border-color: var(--profile-primary);
                color: var(--profile-bg);
                font-weight: 600;
                padding: 10px 30px;
                border-radius: 8px;
                transition: all 0.3s ease;
            }

                .btn-custom-primary:hover {
                    background-color: #d8901e;
                    border-color: #d8901e;
                    color: var(--profile-bg);
                    transform: translateY(-2px);
                    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
                }

            .btn-custom-secondary {
                background-color: var(--profile-border-color);
                border: 1px solid var(--profile-border-color);
                color: var(--profile-text);
                padding: 8px 20px;
                border-radius: 8px;
            }

                .btn-custom-secondary:hover {
                    background-color: var(--profile-border-color);
                    color: var(--profile-text);
                }

            .info-item {
                display: flex;
                align-items: flex-start;
                padding: 1.25rem 0;
                border-bottom: 1px solid var(--profile-border-color);
            }

                .info-item:last-of-type {
                    border-bottom: none;
                }

            .info-icon {
                color: var(--profile-primary);
                font-size: 1.5rem;
                margin-right: 1.25rem;
                min-width: 30px;
                text-align: center;
            }

            .info-content .info-label {
                display: block;
                color: var(--profile-text-muted);
                font-size: 0.9rem;
                margin-bottom: 0.25rem;
            }

            .info-content .info-value {
                display: block;
                color: var(--profile-text);
                font-weight: 600;
                font-size: 1rem;
            }
        </style>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Main Profile View Card -->
                <div class="card profile-view-card">
                    <div class="card-body p-4 p-md-5">

                        <!-- Header Section -->
                        <div class="d-flex flex-column flex-md-row align-items-center mb-4">
                            <img src="~/admin/assets/images/profiles/@Model.ProfileImagePath" alt="Profile Picture" class="profile-image-view mb-4 mb-md-0">
                            <div class="text-center text-md-start ms-md-4 flex-grow-1">
                                <h2 class="fw-bolder mb-1" style="color: var(--profile-primary);">@Model.Name</h2>
                                <p class="fs-4 mb-3" style="color: var(--profile-text-muted);">@Model.Email</p>
                            </div>
                            <a href="@Url.Action("editprofile","UserHome")" class="btn btn-custom-primary mt-3 mt-md-0">
                                <i class="ti ti-edit me-1"></i> Edit Profile
                            </a>
                        </div>



                        <!-- Personal Information Section -->
                        <div>
                            <h4 class="mb-4 fw-semibold text-white">Contact & Personal Details</h4>
                            <div class="row">
                                <!-- Left Column -->
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <i class="ti ti-user info-icon"></i>
                                        <div class="info-content">
                                            <span class="info-label">Username</span>
                                            <span class="info-value">@Model.Username</span>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <i class="ti ti-mail info-icon"></i>
                                        <div class="info-content">
                                            <span class="info-label">Email Address</span>
                                            <span class="info-value">@Model.Email</span>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <i class="ti ti-device-mobile info-icon"></i>
                                        <div class="info-content">
                                            <span class="info-label">Mobile Number</span>
                                            <span class="info-value">@Model.MobileNumber</span>
                                        </div>
                                    </div>
                                </div>
                                <!-- Right Column -->
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <i class="ti ti-calendar-event info-icon"></i>
                                        <div class="info-content">
                                            <span class="info-label">Date of Birth</span>
                                            <span class="info-value">@Model.DateOfBirth</span>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <i class="ti ti-map-pin info-icon"></i>
                                        <div class="info-content">
                                            <span class="info-label">Address</span>
                                            <span class="info-value">@Model.Address</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Security Section -->
                        <div class="mt-5 pt-4" style="border-top: 1px solid var(--profile-border-color);">
                            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center">
                                <div>
                                    <h5 class="fw-semibold mb-1 text-white">Login & Security</h5>
                                    <p class="mb-sm-0" style="color: var(--profile-text-muted);">Manage your password for account security.</p>
                                </div>
                                <a href="@Url.Action("changepassword", "UserHome")" class="btn btn-custom-secondary mt-3 mt-sm-0">Change Password</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    </div>
</div>