<style>
    /* ---- Brand Color Variables ---- */
    :root {
        --policypro-primary: #f5a526;
        --policypro-dark: #171827;
        --policypro-light-bg: #f8f9fa;
        --policypro-border: #e9ecef;
    }

    /* ---- General Page & Content Styling ---- */
    html {
        scroll-behavior: smooth;
        scroll-padding-top: 120px;
    }

    .terms-list li i {
        color: var(--policypro-primary) !important;
    }

    .terms-page {
        padding: 100px 0;
        background-color: #fff;
    }

    .terms-content p {
        color: #555;
        margin-bottom: 20px;
        line-height: 1.8;
        font-size: 16px;
    }

    .terms-last-updated {
        font-style: italic;
        color: #888;
        font-size: 14px;
        margin-bottom: 30px;
    }

    .terms-section {
        margin-bottom: 50px;
    }

    .terms-section__title {
        font-size: 24px;
        font-weight: 700;
        color: var(--policypro-dark);
        margin-bottom: 25px;
        position: relative;
        padding-bottom: 15px;
    }
        /* Creates a stylish underline */
        .terms-section__title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 3px;
            background-color: var(--policypro-primary);
        }

    .terms-list {
        padding-left: 0;
        margin-top: 25px;
    }

        .terms-list li {
            margin-bottom: 15px;
            display: flex;
            align-items: flex-start;
            font-size: 16px;
        }

            .terms-list li i {
                margin-right: 12px;
                font-size: 18px;
                margin-top: 3px;
            }

    /* ---- Sidebar Styling ---- */
    .sidebar {
        background-color: var(--policypro-light-bg);
        border: 1px solid var(--policypro-border);
        border-radius: 8px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        position: sticky;
        top: 100px;
    }

    .sidebar__title {
        font-size: 20px;
        font-weight: 700;
        color: var(--policypro-dark);
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid var(--policypro-border);
    }

    .sidebar__category-list li {
        margin-bottom: 5px;
    }

        .sidebar__category-list li a {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 15px;
            color: #444;
            font-weight: 500;
            border-radius: 6px;
            text-decoration: none;
            transition: all 0.3s ease-in-out;
            border-left: 3px solid transparent;
        }

            .sidebar__category-list li a:hover {
                background-color: #e9ecef;
                color: var(--policypro-dark);
            }

            /* Active state for sidebar links */
            .sidebar__category-list li a.active {
                background-color: rgba(245, 165, 38, 0.1);
                color: var(--policypro-primary);
                font-weight: 700;
                border-left-color: var(--policypro-primary);
            }

            .sidebar__category-list li a .fas {
                transition: transform 0.3s ease;
            }

            .sidebar__category-list li a:hover .fas,
            .sidebar__category-list li a.active .fas {
                transform: translateX(5px);
            }
</style>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sections = document.querySelectorAll(".terms-section");
            const navLinks = document.querySelectorAll(".sidebar__category-list li a");
            const headerOffset = 120; 


            navLinks.forEach(link => {
                link.addEventListener('click', function (event) {

                    event.preventDefault();

          
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);

                    if (targetElement) {
               
                        const elementPosition = targetElement.getBoundingClientRect().top + window.pageYOffset;
                        const offsetPosition = elementPosition - headerOffset;

              
                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });
                    }
                });
            });


 
            const updateActiveLinkOnScroll = () => {
                let currentSectionId = "";
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (window.pageYOffset >= sectionTop - headerOffset - 50) { 
                        currentSectionId = section.getAttribute("id");
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove("active");
                    if (link.getAttribute("href") === "#" + currentSectionId) {
                        link.classList.add("active");
                    }
                });

          
                if (!document.querySelector('.sidebar__category-list li a.active') && navLinks.length > 0) {
                     navLinks[0].classList.add("active");
                }
            };

            window.addEventListener("scroll", updateActiveLinkOnScroll);
            updateActiveLinkOnScroll(); 
        });
    </script>
}