@using PolicyPro360.ViewModels
@model ContactViewModel

    @{
    ViewData["Title"] = "Contact Us - PolicyPro360";
    Layout = "_UserLayout";
}

<style>
.comment-form__input-box input[type="text"],
.comment-form__input-box input[type="email"],
.comment-form__input-box input[type="tel"], 
.comment-form__input-box textarea {
    background-color: #f5f5f5;
    border: none;
    padding: 12px 20px;
    border-radius: 8px;
}
</style>
<!--Page Header Start-->
<section class="page-header">
    <div class="page-header-bg" style="background-image: url('@Url.Content("~/user/assets/images/backgrounds/page-header-bg.jpg")')">
    </div>
    <div class="page-header-shape-1"><img src="~/user/assets/images/shapes/page-header-shape-1.png" alt=""></div>
    <div class="container">
        <div class="page-header__inner">
            <ul class="thm-breadcrumb list-unstyled">
                <li><a href="index.html">Home</a></li>
                <li><span>/</span></li>
                <li>Contact</li>
            </ul>
            <h2>Contact</h2>
        </div>
    </div>
</section>
<!--Page Header End-->
<!--Contact Page Start-->
<section class="contact-page">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5">
                <div class="contact-page__left">
                    <div class="section-title text-left">
                        <div class="section-sub-title-box">
                            <p class="section-sub-title">Contact us</p>
                            <div class="section-title-shape-1">
                                <img src="~/user/assets/images/shapes/section-title-shape-1.png" alt="">
                            </div>
                            <div class="section-title-shape-2">
                                <img src="~/user/assets/images/shapes/section-title-shape-2.png" alt="">
                            </div>
                        </div>
                        <h2 class="section-title__title">Feel free to get in touch with experts</h2>
                    </div>
                    <div class="contact-page__call-email">
                        <div class="contact-page__call-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-page__call-email-content">
                            <h4>
                                <a href="tel:+92 3800 8060" class="contact-page__call-number">+92 3800 8060</a>
                                <a href="mailto:support@policypro360.com"
                                   class="contact-page__email">support@policypro360.com</a>
                            </h4>
                        </div>
                    </div>
                    <p class="contact-page__location-text">Suite 705, Business Avenue, Shahrah-e-Faisal, Karachi, Pakistan</p>
                </div>
            </div>
            <div class="col-xl-8 col-lg-7">
                <div class="contact-page__right">
                    <div class="contact-page__form">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                        }
                        <form asp-action="Contact" asp-controller="UserHome" method="post">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-xl-6">
                                    <div class="comment-form__input-box">
                                        <input name="Name" type="text" placeholder="Your name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="comment-form__input-box">
                                        <input name="Email" type="email" placeholder="Email address" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="comment-form__input-box">
                                        <input name="Phone" type="text" placeholder="Phone number" />
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="comment-form__input-box">
                                        <input name="Subject" type="text" placeholder="Subject" />
                                        <span asp-validation-for="Subject" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="comment-form__input-box text-message-box">
                                        <textarea name="Message" placeholder="Write a message"></textarea>
                                        <span asp-validation-for="Message" class="text-danger"></span>
                                    </div>
                                    <div class="comment-form__btn-box">
                                        <button type="submit" class="thm-btn comment-form__btn">
                                            Send Message
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Contact Page End-->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}