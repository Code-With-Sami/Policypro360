@{
    ViewData["Title"] = "Home Insurance - PolicyPro360";
    Layout = "_UserLayout";
}
<!--Page Header Start-->
<section class="page-header">
    <div class="page-header-bg" style="background-image: url('@Url.Content("~/user/assets/images/backgrounds/home-insurance-bg.jpg")')">
    </div>
    <div class="page-header-shape-1"><img src="~/user/assets/images/shapes/page-header-shape-1.png" alt=""></div>
    <div class="container">
        <div class="page-header__inner">
            <ul class="thm-breadcrumb list-unstyled">
                <li><a href="index.html">Home</a></li>
                <li><span>/</span></li>
                <li>Insurance</li>
            </ul>
            <h2>Home insurance</h2>
        </div>
    </div>
</section>
<!--Page Header End-->
<!--Insurance Details Start-->
<section class="insurance-details">
    <div class="container">
        <div class="row">
            <!-- Left Sidebar -->
            <div class="col-xl-4 col-lg-5">
                <div class="insurance-details__left">
                    <!-- Services List -->
                    <div class="insurance-details__services-box">
                        <ul class="insurance-details__services-list list-unstyled">
                            <li>
                                <a href="@Url.Action("motor","UserHome")">
                                    Motor Insurance <span class="icon-right-arrow1"></span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("life", "UserHome")">
                                    Life Insurance <span class="icon-right-arrow1"></span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Home","UserHome")">
                                    Home Insurance <span class="icon-right-arrow1"></span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("medical", "UserHome")">
                                    Medical Insurance <span class="icon-right-arrow1"></span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- Download Section -->
                    <div class="insurance-details__download" aria-label="Download resources">
                        <h3 class="insurance-details__download-title">Download Resources</h3>
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="insurance-details__download-single">
                                    <div class="insurance-details__download-icon" aria-hidden="true">
                                        <span class="fa fa-file-pdf"></span>
                                    </div>
                                    <p class="insurance-details__download-mb">3.9KB</p>
                                    <h3 class="insurance-details__download-title-2">
                                        <a href="files/travel-plan-policy.pdf"
                                           aria-label="Download Travel plan and policy PDF" download>
                                            Home
                                            Insurance <br>Policy
                                        </a>
                                    </h3>
                                    <div class="insurance-details__download-btn-box">
                                        <a href="files/home-plan-policy.pdf"
                                           class="insurance-details__download-btn thm-btn"
                                           aria-label="Download Travel plan and policy PDF"
                                           download>Download</a>
                                    </div>
                                </div>
                            </div>
             
                          
                        </div>
                    </div>
                    <!-- Need Help Box -->
                    <div class="insurance-details__need-help" role="region"
                         aria-label="Need help contact information">
                        <div class="insurance-details__need-help-bg"
                             style="background-image: url(~/user/assets/images/update-10-02-2023/resources/insurance-details-need-help-bg.jpg);"
                             aria-hidden="true"></div>
                        <div class="insurance-details__need-help-icon" aria-hidden="true">
                            <span class="fa fa-phone"></span> 
                        </div>
                        <h2 class="insurance-details__need-help-title">Talk to our<br>insurance agent</h2>
                        <div class="insurance-details__need-help-contact">
                            <a href="tel:+9200368090" aria-label="Call our experts at +92 (003) 68-090">
                                +92
                                (003) 68-090
                            </a>
                            <p>Call to Our Experts</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Content Area -->
            <div class="col-xl-8 col-lg-7">
                <div class="insurance-details__right">
                    <!-- Top Image -->
                    <div class="insurance-details__img-1">
                        <img src="~/user/assets/images/update-10-02-2023/resources/insurance-details-img-2.jpg"
                             alt="Home insurance coverage illustration">
                    </div>

                    <!-- Eligibility Box -->
                    <div class="insurance-details__age-box">
                        <div class="insurance-details__age-title-box">
                            <h3 class="insurance-details__age-title">Eligible ages:</h3>
                        </div>
                        <ul class="insurance-details__age-list list-unstyled">
                            <li>
                                <p>Minimum Age: <span>10 Years</span></p>
                            </li>
                            <li>
                                <p>Maximum Age: <span>65 Years</span></p>
                            </li>
                        </ul>
                    </div>

                    <!-- Home Insurance Content -->
                    <p class="insurance-details__text-2">The Importance and Benefits of Home Insurance</p>
                    <p class="insurance-details__text-1">
                        Your home is one of the most valuable investments
                        you'll ever make. It represents years of hard work, savings, and dreams. But in the face
                        of natural disasters, theft, fire, or other unexpected events, that investment can be
                        lost in moments. That’s where home insurance becomes your financial safety net.
                    </p>

                    <p class="insurance-details__text-2">What is Home Insurance?</p>
                    <p class="insurance-details__text-3">
                        Home insurance is a contract between you and an
                        insurance company that provides financial protection in case your home or belongings are
                        damaged or lost due to covered risks.
                    </p>

                    <p class="insurance-details__text-2">Key Benefits of Home Insurance:</p>
                    <ul class="insurance-details__opportunities-list list-unstyled">
                        <li>
                            <div class="icon" aria-hidden="true"><span class="fa fa-check"></span></div>
                            <div class="text">
                                <p>Protection Against Natural Disasters</p>
                            </div>
                        </li>
                        <p>Provides coverage against floods, earthquakes, fires, and storms.</p>
                        <li>
                            <div class="icon" aria-hidden="true"><span class="fa fa-check"></span></div>
                            <div class="text">
                                <p>Coverage in Case of Theft or Burglary</p>
                            </div>
                        </li>
                        <p>Compensates for loss if your valuables are stolen or damaged.</p>
                        <li>
                            <div class="icon" aria-hidden="true"><span class="fa fa-check"></span></div>
                            <div class="text">
                                <p>Personal Belongings Coverage</p>
                            </div>
                        </li>
                        <p>Includes coverage for furniture, electronics, appliances, and more.</p>
                        <li>
                            <div class="icon" aria-hidden="true"><span class="fa fa-check"></span></div>
                            <div class="text">
                                <p>Peace of Mind</p>
                            </div>
                        </li>
                        <p>Stay financially protected and stress-free in case of unexpected damage.</p>
                    </ul>

                    <!-- Quick Tips -->
                    <div class="insurance-details__opportunities">
                        <div class="insurance-details__opportunities-img">
                            <img src="~/user/assets/images/backgrounds/home-bottom.webp"
                                 alt="Hope for the Best, Prepare for the Worst">
                            <div class="insurance-details__opportunities-hope">
                                <p>Hope for the Best,<br>Prepare for the Worst</p>
                            </div>
                        </div>
                        <div class="insurance-details__opportunities-points-box">
                            <h3 class="insurance-details__opportunities-points-title">
                                Quick Tips for Buying Home
                                Insurance:
                            </h3>
                            <p class="insurance-details__opportunities-points-text">
                                Choosing the right home insurance policy can save you from major financial
                                stress during unexpected events. Make sure to compare plans, understand what’s
                                covered, and don’t hesitate to ask questions before signing. A little awareness
                                now can offer big protection later.
                            </p>
                            <ul class="insurance-details__opportunities-list list-unstyled">
                                <li>
                                    <div class="icon" aria-hidden="true"><span class="fa fa-check"></span></div>
                                    <div class="text">
                                        <p>Read the full policy carefully.</p>
                                    </div>
                                </li>
                                <li>
                                    <div class="icon" aria-hidden="true"><span class="fa fa-check"></span></div>
                                    <div class="text">
                                        <p>Know the inclusions and exclusions.</p>
                                    </div>
                                </li>
                                <li>
                                    <div class="icon" aria-hidden="true"><span class="fa fa-check"></span></div>
                                    <div class="text">
                                        <p>Check the premium and coverage limit.</p>
                                    </div>
                                </li>
                                <li>
                                    <div class="icon" aria-hidden="true"><span class="fa fa-check"></span></div>
                                    <div class="text">
                                        <p>Understand the claim process clearly.</p>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Extra Features -->
                    <ul class="insurance-details__points list-unstyled">
                        <li>
                            <div class="insurance-details__points-left">
                                <div class="insurance-details__points-icon" aria-hidden="true">
                                    <span class="icon-easy-to-use"></span>
                                </div>
                                <h3 class="insurance-details__points-title">Fast & Easy<br>Process</h3>
                            </div>
                            <div class="insurance-details__points-right">
                                <p>Get covered quickly with a simple and hassle-free sign-up.</p>
                            </div>
                        </li>
                        <li>
                            <div class="insurance-details__points-left">
                                <div class="insurance-details__points-icon" aria-hidden="true">
                                    <span class="icon-contract"></span>
                                </div>
                                <h3 class="insurance-details__points-title">Quick Claim<br>Handle</h3>
                            </div>
                            <div class="insurance-details__points-right">
                                <p>Enjoy fast and reliable claims handling with expert support.</p>
                            </div>
                        </li>
                        <li>
                            <div class="insurance-details__points-left">
                                <div class="insurance-details__points-icon" aria-hidden="true">
                                    <span class="icon-fund"></span>
                                </div>
                                <h3 class="insurance-details__points-title">Save Your<br>Money</h3>
                            </div>
                            <div class="insurance-details__points-right">
                                <p>Affordable premiums that protect your investment and budget.</p>
                            </div>
                        </li>
                    </ul>

                    <!-- Contact Form -->
                    <h3 class="insurance-details__title-1">Talk to our insurance experts</h3>
                    <p class="insurance-details__text-4">
                        Speak with insurance experts and ask questions before
                        finalizing your plans or if you want help regarding our services. Our dedicated staff is
                        more than happy to call and guide you.
                    </p>
                    <form class="insurance-details__email-box">
                        <div class="insurance-details__email-input-box">
                            <input type="text" placeholder="Your phone number" name="phone">
                        </div>
                        <button type="submit" class="insurance-details__subscribe-btn thm-btn">
                            Get a Phone
                            Call
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Insurance Details End-->
