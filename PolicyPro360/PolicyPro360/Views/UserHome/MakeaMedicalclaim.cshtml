@{
    ViewData["Title"] = "Make a Medical Claim - PolicyPro360";
    Layout = "_UserLayout";
}
<!--Page Header Start-->
<section class="page-header">
    <div class="page-header-bg" style="background-image: url('@Url.Content("~/user/assets/images/backgrounds/medical-insurance-bg.jpg")')">
    </div>
    <div class="page-header-shape-1"><img src="~/user/assets/images/shapes/page-header-shape-1.png" alt=""></div>
    <div class="container">
        <div class="page-header__inner">
            <ul class="thm-breadcrumb list-unstyled">
                <li><a href="index.html">Home</a></li>
                <li><span>/</span></li>
                <li><a href="make-a-claim.html">Make a Claim</a></li>
                <li><span>/</span></li>
                <li>Health & Medical Claims</li>
            </ul>
            <h2>Health & Medical Claims</h2>
        </div>
    </div>
</section>
<!--Page Header End-->
<!--Make a claim Start-->
<section class="make-a-claim">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-7">
                <div class="make-a-claim__left">
                    <h3 class="make-a-claim__title-1">Filing a Health Insurance Claim</h3>
                    <p class="make-a-claim__text-1">
                        When a medical need arises, your focus should be on
                        recovery, not paperwork. We've designed our health claim process to be as smooth and
                        supportive as possible. There are two primary types of claims: 'Cashless' (where we pay
                        the hospital directly) and 'Reimbursement' (where you pay first and we refund you).
                    </p>
                    <div class="make-a-claim__img-and-points-box">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="make-a-claim__img">
                                    <img src="~/user/assets/images/backgrounds/med-claim.png"
                                         alt="Doctor consulting with a patient">
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="make-a-claim__points-box">
                                    <p class="make-a-claim__points-text">
                                        For a hassle-free experience,
                                        especially for planned hospitalizations, please keep the following
                                        ready:
                                    </p>
                                    <ul class="make-a-claim__points-list list-unstyled">
                                        <li>
                                            <div class="icon">
                                                <span class="fa fa-check"></span>
                                            </div>
                                            <div class="text">
                                                <p>Your Health Insurance Card and Policy Number.</p>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="icon">
                                                <span class="fa fa-check"></span>
                                            </div>
                                            <div class="text">
                                                <p>
                                                    Inform the TPA desk at the network hospital upon admission.
                                                </p>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h3 class="make-a-claim__title-2">Procedure for Health Claims</h3>
                    <p class="make-a-claim__text-2">
                        The documents required are crucial for a quick settlement.
                        Ensure all bills, reports, and forms are correctly filled and submitted to us promptly.
                    </p>
                    <div class="make-a-claim__procedure-box">
                        <div class="make-a-claim__procedure-shape-1">
                            <img src="~/user/assets/images/update-10-02-2023/shapes/make-a-claim-procedure-shape-1.png"
                                 alt="">
                        </div>
                        <ul class="make-a-claim__procedure list-unstyled">
                            <li>
                                <div class="make-a-claim__procedure-icon-box">
                                    <div class="make-a-claim__procedure-icon">
                                        <span><i class="fas fa-hospital-user"></i></span>
                                    </div>
                                    <div class="make-a-claim__procedure-icon-count"></div>
                                </div>
                                <div class="make-a-claim__procedure-content">
                                    <h4 class="make-a-claim__procedure-title">
                                        Claim Intimation<br>&
                                        Pre-Authorization
                                    </h4>
                                </div>
                            </li>
                            <li>
                                <div class="make-a-claim__procedure-icon-box">
                                    <div class="make-a-claim__procedure-icon">
                                        <span><i class="fas fa-file-medical"></i></span>
                                    </div>
                                    <div class="make-a-claim__procedure-icon-count"></div>
                                </div>
                                <div class="make-a-claim__procedure-content">
                                    <h4 class="make-a-claim__procedure-title">
                                        Submit Medical<br>Bills & Reports
                                    </h4>
                                </div>
                            </li>
                            <li>
                                <div class="make-a-claim__procedure-icon-box">
                                    <div class="make-a-claim__procedure-icon">
                                        <span><i class="fas fa-file-invoice-dollar"></i></span>
                                    </div>
                                    <div class="make-a-claim__procedure-icon-count"></div>
                                </div>
                                <div class="make-a-claim__procedure-content">
                                    <h4 class="make-a-claim__procedure-title">Verification &<br>Settlement</h4>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="make-a-claim__procedure-faq">
                        <div class="accrodion-grp" data-grp-name="faq-one-accrodion">
                            <div class="accrodion active">
                                <div class="accrodion-title">
                                    <h4>
                                        <span>?</span> What is the difference between Cashless and
                                        Reimbursement?
                                    </h4>
                                </div>
                                <div class="accrodion-content">
                                    <div class="inner">
                                        <p>
                                            In a 'Cashless' claim, we settle the bill directly with the network
                                            hospital. In a 'Reimbursement' claim, you pay the bills first, and
                                            we refund the approved amount to you later upon document submission.
                                        </p>
                                    </div><!-- /.inner -->
                                </div>
                            </div>
                            <div class="accrodion">
                                <div class="accrodion-title">
                                    <h4><span>?</span> Which documents are required for a health claim?</h4>
                                </div>
                                <div class="accrodion-content">
                                    <div class="inner">
                                        <p>
                                            Commonly required documents include the filled claim form, hospital
                                            discharge summary, all original hospital and pharmacy bills,
                                            doctor's prescriptions, and investigation reports.
                                        </p>
                                    </div><!-- /.inner -->
                                </div>
                            </div>
                            <div class="accrodion last-chiled">
                                <div class="accrodion-title">
                                    <h4><span>?</span> What is a TPA (Third Party Administrator)?</h4>
                                </div>
                                <div class="accrodion-content">
                                    <div class="inner">
                                        <p>
                                            A TPA is a service provider that assists us in processing your
                                            claims. They coordinate between you, the hospital, and us to
                                            facilitate cashless services and claim settlements.
                                        </p>
                                    </div><!-- /.inner -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5">
                <div class="make-a-claim__right">
                    <div class="make-a-claim__claim-box">
                        <ul class="make-a-claim__claim-list list-unstyled">
                            <li class="active">
                                <a href="@Url.Action("MakeaMedicalclaim", "UserHome")">Health & Medical Claims<span class="icon-right-arrow1"></span></a>
                            </li>
                            <li>
                                <a href="@Url.Action("MakeaMotorclaim", "UserHome")">Motor (Car/Bike) Claims<span class="icon-right-arrow1"></span></a>
                            </li>
                            <li>
                                <a href="@Url.Action("MakeaLifeclaim", "UserHome")">Life Insurance Claims<span class="icon-right-arrow1"></span></a>
                            </li>
                            <li>
                                <a href="@Url.Action("MakeaHomeclaim", "UserHome")">Home Insurance Claims<span class="icon-right-arrow1"></span></a>
                            </li>
                            <li>
                                <a href="@Url.Action("MakeLoanAgainstPolicy", "UserHome")">Loan Against Policy<span class="icon-right-arrow1"></span></a>
                            </li>
                        </ul>
                    </div>
                    <div class="insurance-details__need-help">
                        <div class="insurance-details__need-help-bg"
                             style="background-image: url('@Url.Content("~/user/assets/images/update-10-02-2023/resources/insurance-details-need-help-bg.jpg")')">
                        </div>
                        <div class="insurance-details__need-help-icon">
                            <span class="fa fa-phone"></span>
                        </div>
                        <h2 class="insurance-details__need-help-title">
                            We are here to help<br> in your time of
                            need
                        </h2>
                        <div class="insurance-details__need-help-contact">
                            <a href="tel:+9200368090">+92 (003) 68-090</a>
                            <p>Call our Dedicated Support Team</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Make a claim End-->
<!--Tracking Start-->
<section class="tracking">
    <div class="container">
        <div class="tracking__inner">
            <div class="tracking__left">
                <div class="tracking__icon" aria-hidden="true"><span class="icon-folder"></span></div>
                <div class="tracking__content">
                    <p class="tracking__sub-title">Quisque vel ortor</p>
                    <h3 class="tracking__title">Start tracking your claims</h3>
                </div>
            </div>
            <div class="tracking__btn-box">
                <a href="@Url.Action("TrackClaim", "UserHome")" class="thm-btn tracking__btn">Track Your Claim</a>
            </div>
        </div>
    </div>
</section>
<!--Tracking End-->