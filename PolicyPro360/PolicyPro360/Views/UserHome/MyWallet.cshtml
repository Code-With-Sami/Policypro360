@model PolicyPro360.Models.UserWallet
@{
    ViewData["Title"] = "My Wallet - PolicyPro360";
    Layout = "_UserDashboardLayout";
}

<div class="body-wrapper-inner">
    <div class="container-fluid">
        <!-- Custom Styles -->
        <style>
            :root {
                --profile-bg: #171827;
                --profile-card-bg: #1e1f2f;
                --profile-primary: #f5a526;
                --profile-text: #e0e0e0;
                --profile-text-muted: #8a99b5;
                --profile-border-color: #2a2c3c;
            }

                .snapshot-icon {
                    font-size: 2.5rem;
                    color: var(--profile-primary);
                    margin-bottom: 0.75rem;
                }

            .profile-view-card {
                background-color: var(--profile-card-bg);
                border: 1px solid var(--profile-border-color);
                border-radius: 12px;
                color: var(--profile-text);
            }

            .profile-image-view {
                width: 150px;
                height: 150px;
                object-fit: cover;
                border-radius: 50%;
                border: 4px solid var(--profile-primary);
                box-shadow: 0 0 15px rgba(245, 165, 38, 0.3);
            }

            .btn-custom-primary {
                background-color: var(--profile-primary);
                border-color: var(--profile-primary);
                color: var(--profile-bg);
                font-weight: 600;
                padding: 10px 30px;
                border-radius: 8px;
                transition: all 0.3s ease;
            }

                .btn-custom-primary:hover {
                    background-color: #d8901e;
                    border-color: #d8901e;
                    color: var(--profile-bg);
                    transform: translateY(-2px);
                    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
                }

            .btn-custom-secondary {
                background-color: var(--profile-border-color);
                border: 1px solid var(--profile-border-color);
                color: var(--profile-text);
                padding: 8px 20px;
                border-radius: 8px;
            }

                .btn-custom-secondary:hover {
                    background-color: var(--profile-border-color);
                    color: var(--profile-text);
                }

            .info-item {
                display: flex;
                align-items: flex-start;
                padding: 1.25rem 0;
                border-bottom: 1px solid var(--profile-border-color);
            }

                .info-item:last-of-type {
                    border-bottom: none;
                }

            .info-icon {
                color: var(--profile-primary);
                font-size: 1.5rem;
                margin-right: 1.25rem;
                min-width: 30px;
                text-align: center;
            }

            .info-content .info-label {
                display: block;
                color: var(--profile-text-muted);
                font-size: 0.9rem;
                margin-bottom: 0.25rem;
            }

            .info-content .info-value {
                display: block;
                color: var(--profile-text);
                font-weight: 600;
                font-size: 1rem;
            }

            .form-control, .form-select {
                background-color: var(--profile-border-color);
                border: 1px solid var(--profile-border-color);
                color: var(--profile-text);
                border-radius: 8px;
            }

            .form-control:focus, .form-select:focus {
                background-color: var(--profile-border-color);
                border-color: var(--profile-primary);
                color: var(--profile-text);
                box-shadow: 0 0 0 0.2rem rgba(245, 165, 38, 0.25);
            }

            .form-control::placeholder {
                color: var(--profile-text-muted);
            }

            .form-label {
                color: var(--profile-text);
                font-weight: 600;
                margin-bottom: 0.5rem;
            }
        </style>

        <div class="row justify-content-center">
            <div class="col-lg-10 mt-5">
                <!-- Main Profile View Card -->
                <div class="card profile-view-card">
                    <div class="card-body p-4 p-md-5">

                        <!-- Header Section -->
                        <div class="d-flex flex-column flex-md-row align-items-center mb-4">
                            <i class="ti ti-report-money snapshot-icon"></i>
                            <h2 class="mb-4 fw-semibold text-white text-capitalize mt-3">@ViewBag.name</h2>
                            <div class="text-end text-md-end ms-md-4 flex-grow-1">
                                <p class="fs-4 mb-3" style="color: var(--profile-text-muted);">Balance</p>
                                <h2 class="fw-bolder mb-1" style="color: var(--profile-primary);">@Model.Balance</h2>
                            </div>
                        </div>



                        <!-- Personal Information Section -->
                        <div>
                            <h4 class="mb-4 fw-semibold text-white">Details</h4>
                            <div class="row">
                                <!-- Left Column -->
                                <div class="col-md-12">
                                    <div class="info-item">
                                        <i class="ti ti-refresh info-icon"></i>
                                        <div class="info-content">
                                            <span class="info-label">Last Updated</span>
                                            <span class="info-value">@Model.LastUpdated</span>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <i class="ti ti-book info-icon"></i>
                                        <div class="info-content">
                                            <span class="info-label">Description</span>
                                            <span class="info-value">@Model.Description</span>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>

                        

                        <!-- Add Money Section -->
                        <div class="mt-5 pt-4" style="border-top: 1px solid var(--profile-border-color);">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="text-white mb-0">Wallet Actions</h5>
                                <button type="button" class="btn btn-custom-primary" data-bs-toggle="modal" data-bs-target="#addMoneyModal">
                                    <i class="ti ti-plus me-2"></i>Add Money to Wallet
                                </button>
                            </div>
                        </div>

                        <!-- Withdraw Section -->
                        <div class="mt-4 pt-4" style="border-top: 1px solid var(--profile-border-color);">
                            <h5 class="mb-3 text-white">Withdraw Money</h5>
                            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center">
                                @if (Model.Balance > 0)
                                {
                                    <button type="button" class="btn btn-custom-primary w-100" onclick="confirmWithdraw()">
                                        <i class="ti ti-cash me-2"></i>Withdraw All (Rs. @Model.Balance.ToString("N0"))
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-warning w-100" disabled>
                                        <i class="ti ti-cash me-2"></i>No Balance to Withdraw
                                    </button>
                                }
                            </div>
                        </div>

                        <!-- Hidden Form for Withdrawal -->
                        <form id="withdrawForm" asp-action="WithdrawWallet" asp-controller="UserHome" method="post" style="display: none;">
                            @Html.AntiForgeryToken()
                        </form>

                    </div>
                </div>
            </div>
        </div>

        <!-- Add Money Modal -->
        <div class="modal fade" id="addMoneyModal" tabindex="-1" aria-labelledby="addMoneyModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content" style="background-color: var(--profile-card-bg); border: 1px solid var(--profile-border-color);">
                    <div class="modal-header" style="border-bottom: 1px solid var(--profile-border-color);">
                        <h5 class="modal-title text-white" id="addMoneyModalLabel">
                            <i class="ti ti-plus me-2"></i>Add Money to Wallet
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-action="AddMoneyToWallet" asp-controller="UserHome" method="post">
                        @Html.AntiForgeryToken()
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-white">Amount (Rs.)</label>
                                    <input type="number" name="amount" class="form-control" placeholder="Enter amount" min="100" step="100" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-white">Payment Method</label>
                                    <select name="paymentMethod" class="form-select" required>
                                        <option value="">Select Payment Method</option>
                                        <option value="Bank Transfer">Bank Transfer</option>
                                        <option value="EasyPaisa">EasyPaisa</option>
                                        <option value="JazzCash">JazzCash</option>
                                        <option value="Cash Deposit">Cash Deposit</option>
                                        <option value="Online Payment">Online Payment</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label class="form-label text-white">Reference Number</label>
                                    <input type="text" name="referenceNumber" class="form-control" placeholder="Transaction/Reference ID" required>
                                </div>
                            </div>
                            <div class="alert alert-info" style="background-color: rgba(245, 165, 38, 0.1); border-color: var(--profile-primary); color: var(--profile-primary);">
                                <i class="ti ti-info-circle me-2"></i>
                                <strong>Note:</strong> Please ensure you have completed the payment before submitting this form. The reference number will be used to verify your transaction.
                            </div>
                        </div>
                        <div class="modal-footer" style="border-top: 1px solid var(--profile-border-color);">
                            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-custom-primary">
                                <i class="ti ti-check me-2"></i>Add Money to Wallet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- JavaScript for Confirmation Dialog -->
        <script>
            function confirmWithdraw() {
                const balance = @Model.Balance;
                const confirmMessage = `Are you sure you want to withdraw Rs. ${balance.toLocaleString()} from your wallet?\n\nThis action cannot be undone.`;
                
                if (confirm(confirmMessage)) {
                    document.getElementById('withdrawForm').submit();
                }
            }

            // Reset modal form when modal is closed
            document.getElementById('addMoneyModal').addEventListener('hidden.bs.modal', function () {
                this.querySelector('form').reset();
            });
        </script>

    </div>
</div>