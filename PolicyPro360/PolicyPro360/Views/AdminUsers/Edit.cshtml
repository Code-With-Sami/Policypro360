@model PolicyPro360.Models.Users
@{
    ViewData["Title"] = "Edit User - PolicyPro360";
    Layout = "_Layout";
}

<main class="main-wrapper">
    <div class="main-content">
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Edit User</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index", "AdminUsers")"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Edit User
                        </li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-xl-6">
                    <div class="card">
                        <div class="card-body p-4">
                            <h5 class="mb-4">Edit User</h5>

                            <form asp-controller="AdminUsers" asp-action="Edit" method="post" enctype="multipart/form-data" class="row g-3">
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.Id)

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <!-- Name -->
                                <div class="col-md-12">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <!-- Username -->
                                <div class="col-md-12">
                                    <label asp-for="Username" class="form-label"></label>
                                    <input asp-for="Username" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <!-- MobileNumber -->
                                <div class="col-md-12">
                                    <label asp-for="MobileNumber" class="form-label"></label>
                                    <input asp-for="MobileNumber" class="form-control" />
                                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                </div>

                                <!-- Email -->
                                <div class="col-md-12">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <!-- Date of Birth -->
                                <div class="col-md-12">
                                    <label asp-for="DateOfBirth" class="form-label"></label>
                                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                                <!-- Profile Image -->
                                <div class="col-md-12">
                                    <label asp-for="ProfileImage" class="form-label"></label>
                                    <input asp-for="ProfileImage" class="form-control" type="file" />
                                    <input type="hidden" asp-for="ProfileImagePath" />
                                    <span asp-validation-for="ProfileImage" class="text-danger"></span>

                                    @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                                    {
                                        <div class="mt-2">
                                            <strong>Current Image:</strong><br />
                                            <img src="~/admin/assets/images/profiles/@Model.ProfileImagePath" alt="Profile" width="100" />
                                        </div>
                                    }
                                </div>

                                <!-- Address -->
                                <div class="col-md-12">
                                    <label asp-for="Address" class="form-label"></label>
                                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>

                                <div class="col-md-12">
                                    <div class="d-md-flex d-grid align-items-center gap-3">
                                        <button type="submit" class="btn btn-grd-primary px-4 text-white">Update</button>
                                        <a href="@Url.Action("Index", "AdminUsers")" class="btn btn-secondary px-4">Cancel</a>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
