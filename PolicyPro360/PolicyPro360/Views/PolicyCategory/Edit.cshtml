@model PolicyPro360.Models.Category
@{
    ViewData["Title"] = "Edit Policy Category";
    Layout = "_Layout";
}

<main class="main-wrapper">
    <div class="main-content">
        <!-- Breadcrumb -->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Edit Policy Category</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index", "PolicyCategory")"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Edit Category
                        </li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-xl-6">
                    <div class="card">
                        <div class="card-body p-4">
                            <h5 class="mb-4">Edit Policy Category</h5>

                            <form asp-action="Edit" method="post" class="row g-3">
                                <input type="hidden" asp-for="Id" />

                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        @TempData["SuccessMessage"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }

                                <!-- Category Name -->
                                <div class="col-md-12">
                                    <label asp-for="Name" class="form-label"></label>
                                    <div class="position-relative input-icon">
                                        <input asp-for="Name" class="form-control" placeholder="Enter category name">
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">category</i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <!-- Category Description -->
                                <div class="col-md-12">
                                    <label asp-for="Description" class="form-label"></label>
                                    <div class="position-relative input-icon">
                                        <input asp-for="Description" class="form-control" placeholder="Enter category description">
                                        <span class="position-absolute top-50 translate-middle-y">
                                            <i class="material-icons-outlined fs-5">description</i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <!-- Submit and Cancel Buttons -->
                                <div class="col-md-12">
                                    <div class="d-md-flex d-grid align-items-center gap-3">
                                        <button type="submit" class="btn btn-grd-primary px-4 text-white">Update</button>
                                        <a class="btn btn-grd-royal px-4 text-white" href="@Url.Action("Index", "PolicyCategory")">Cancel</a>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>