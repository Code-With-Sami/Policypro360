@model List<PolicyPro360.Models.Category>
@{
    ViewData["Title"] = "All Policy Categories";
    Layout = "_Layout";
}
<main class="main-wrapper">
    <div class="main-content">
        <!-- Breadcrumb -->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">All Policy Categories</div>
            <div class="ms-auto">
                <div class="btn-group">
                    <a class="btn btn-grd-primary px-4 text-white" href="@Url.Action("Create", "PolicyCategory")">Add New Category</a>
                </div>
            </div>
        </div>

        <!-- Categories Table -->
        <div class="card">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Category Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int count = 1;
                                foreach (var cat in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@cat.Name</td>
                                        <td>@cat.Description</td>
                                        <td>
                                            <a class="btn btn-sm btn-success" href="@Url.Action("Edit", "PolicyCategory", new { id = cat.Id })">Edit</a>
                                            <form asp-action="Delete" asp-controller="PolicyCategory" method="post" asp-route-id="@cat.Id" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">No policy categories found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>