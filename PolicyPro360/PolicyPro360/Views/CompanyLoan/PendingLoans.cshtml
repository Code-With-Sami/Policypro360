@model List<PolicyPro360.Models.LoanRequest>
@{
    ViewData["Title"] = "Pending Loan Requests - Company";
    Layout = "_CompanyLayout";
}

<!-- DataTables CSS -->
<link rel="stylesheet" href="~/admin/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" />

<style>

    .dataTables_paginate .paginate_button.page-item .page-link {
        border-radius: 5px !important;
        margin: 0 3px;
        border: 1px solid #ddd;
        color: #333;
        transition: all 0.2s ease-in-out;
    }

    .dataTables_paginate .paginate_button.active .page-link {
        background: linear-gradient(to right, #6a11cb 0%, #2575fc 100%) !important;
        color: white !important;
        border-color: transparent !important;
        font-weight: bold;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        transform: translateY(-2px);
    }

    .dataTables_paginate .paginate_button:not(.active) .page-link:hover {
        background-color: #f0f0f0;
        border-color: #aaa;
    }

    .dataTables_paginate .page-link:focus {
        box-shadow: none;
    }

    div.dt-button-info h2,
    div.dt-button-info {
        color: white !important;
        background-color: #171827 !important;
        border: none;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .dt-buttons .btn {
        margin-left: 5px;
        margin-top:10px;
    }
</style>

<main class="main-wrapper">
    <div class="main-content">
        <!-- Breadcrumb -->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Pending Loan Requests</div>
        </div>

        <div class="card">
            <div class="card-body">
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                }
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No pending loan requests found.</h5>
                        <p class="text-muted">Everything is up to date!</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table id="pendingLoansTable" class="table table-striped table-bordered" style="width:100%">
                            <thead class="table-dark">
                                <tr>
                                    <th>User</th>
                                    <th>Loan Amount</th>
                                    <th>Loan Type</th>
                                    <th>Purpose</th>
                                    <th>Duration</th>
                                    <th>Request Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var loan in Model)
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <strong>@loan.User?.Name</strong><br />
                                                <small class="text-muted">@loan.User?.Email</small>
                                            </div>
                                        </td>
                                        <td>@loan.LoanAmount.ToString("N0") PKR</td>
                                        <td>@loan.LoanType</td>
                                        <td>@loan.Purpose</td>
                                        <td>@loan.DurationInMonths months</td>
                                        <td>@loan.RequestDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#approveModal-@loan.Id" title="Approve">
                                                Approve
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal-@loan.Id" title="Reject">
                                               Reject
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</main>


<!-- Approve/Reject Modals (No changes here) -->
@foreach (var loan in Model)
{
    <!-- Approve Modal -->
    <div class="modal fade" id="approveModal-@loan.Id" tabindex="-1" aria-labelledby="approveModalLabel-@loan.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="approveModalLabel-@loan.Id">Approve Loan Request</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="ApproveLoan" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="loanId" value="@loan.Id" />
                    <div class="modal-body">
                        <p><strong>User:</strong> @loan.User?.Name</p>
                        <p><strong>Requested Amount:</strong> @loan.LoanAmount.ToString("N0") PKR</p>
                        <p><strong>Loan Type:</strong> @loan.LoanType</p>
                        <p><strong>Purpose:</strong> @loan.Purpose</p>
                        <p><strong>Duration:</strong> @loan.DurationInMonths months</p>
                        <div class="mb-3">
                            <label for="disbursedAmount-@loan.Id" class="form-label">Disbursement Amount</label>
                            <input type="number" class="form-control" id="disbursedAmount-@loan.Id" name="disbursedAmount" value="@loan.LoanAmount" step="0.01" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Approve & Disburse</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Reject Modal -->
    <div class="modal fade" id="rejectModal-@loan.Id" tabindex="-1" aria-labelledby="rejectModalLabel-@loan.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectModalLabel-@loan.Id">Reject Loan Request</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="RejectLoan" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="loanId" value="@loan.Id" />
                    <div class="modal-body">
                        <p><strong>User:</strong> @loan.User?.Name</p>
                        <p><strong>Requested Amount:</strong> @loan.LoanAmount.ToString("N0") PKR</p>
                        <p><strong>Purpose:</strong> @loan.Purpose</p>
                        <div class="mb-3">
                            <label for="rejectionReason-@loan.Id" class="form-label">Rejection Reason (Optional)</label>
                            <textarea class="form-control" id="rejectionReason-@loan.Id" name="rejectionReason" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Reject Request</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <!-- DataTables JS -->
    <script src="~/admin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/admin/assets/plugins/datatable/js/dataTables.buttons.min.js"></script>
    <script src="~/admin/assets/plugins/datatable/js/buttons.bootstrap5.min.js"></script>
    <script src="~/admin/assets/plugins/datatable/js/jszip.min.js"></script>
    <script src="~/admin/assets/plugins/datatable/js/pdfmake.min.js"></script>
    <script src="~/admin/assets/plugins/datatable/js/vfs_fonts.js"></script>
    <script src="~/admin/assets/plugins/datatable/js/buttons.html5.min.js"></script>
    <script src="~/admin/assets-old/plugins/datatable/js/buttons.print.min.js"></script>
    <!-- Font Awesome for icons in buttons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>

    <script>
        $(document).ready(function() {
          $('#pendingLoansTable').DataTable({
            dom: '<"row align-items-center mb-3"<"col-sm-12 col-md-6"lB><"col-sm-12 col-md-6 d-flex justify-content-end"f>>' +
                 '<"row mt-3"<"col-sm-12"tr>>' +
                 '<"row mt-3"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
            lengthChange: true,
            buttons: [
                { extend: 'copy', text: '<i class="bi bi-clipboard"></i> Copy', className: 'btn btn-outline-primary btn-sm' },
                { extend: 'excel', text: '<i class="bi bi-file-earmark-excel"></i> Excel', className: 'btn btn-outline-success btn-sm' },
                { extend: 'pdf', text: '<i class="bi bi-file-earmark-pdf"></i> PDF', className: 'btn btn-outline-danger btn-sm' },
                { extend: 'print', text: '<i class="bi bi-printer"></i> Print', className: 'btn btn-outline-info btn-sm' }
            ],
            pagingType: "simple_numbers"
          });
        });
    </script>
}