<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>User Dashboard - PolicyPro360</title>
    <link rel="shortcut icon" type="image/png" href="~/user/assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/themify-icons/0.1.2/css/themify-icons.css">

    <link rel="stylesheet" href="~/user/assets/css/styles.min.css" />
    <style>

        :root {
        --profile-primary: #f5a526;
        }
    </style>
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">


        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a href="@Url.Action("Index","UserHome")" class="text-nowrap logo-img">
                        <img src="~/user/assets/images/update-15-2-2024/resources/logo-3.png" height="70" alt="PolicyPro360" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-6"></i>
                    </div>
                </div>

                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <!-- ============================= -->
                        <!-- Home -->
                        <!-- ============================= -->
                        <li class="nav-small-cap">
                            <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
                            <span class="hide-menu">Home</span>
                        </li>

                        <!-- =================== -->
                        <!-- Dashboard -->
                        <!-- =================== -->
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("Dashboard","UserHome")" aria-expanded="false">
                                <i class="ti ti-layout-dashboard"></i>
                                <span class="hide-menu">Dashboard</span>
                            </a>
                        </li>

                        <!-- =================== -->
                        <!-- My Wallet -->
                        <!-- =================== -->
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("MyWallet","UserHome")" aria-expanded="false">
                                <i class="ti ti-report-money"></i>
                                <span class="hide-menu">My Wallet</span>
                            </a>
                        </li>

                        <!-- =================== -->
                        <!-- My Policies -->
                        <!-- =================== -->
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("MyPolicies", "UserHome")" aria-expanded="false">
                                <i class="ti ti-shield"></i>
                                <span class="hide-menu">My Policies</span>
                            </a>
                        </li>

                        <!-- =================== -->
                        <!-- My Profile -->
                        <!-- =================== -->
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("profile","UserHome")" aria-expanded="false">
                                <i class="ti ti-user-circle"></i>
                                <span class="hide-menu">My Profile</span>
                            </a>
                        </li>

                        <!-- ============================= -->
                        <!-- Actions -->
                        <!-- ============================= -->
                        <li class="nav-small-cap">
                            <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
                            <span class="hide-menu">Actions</span>
                        </li>

                        <!-- =================== -->
                        <!-- Make Payment -->
                        <!-- =================== -->
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("makepayment", "UserHome")" aria-expanded="false">
                                <i class="ti ti-wallet"></i>
                                <span class="hide-menu">Make Payment</span>
                            </a>
                        </li>

                        <!-- =================== -->
                        <!-- Apply for Loan -->
                        <!-- =================== -->
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("applyloan", "UserHome")" aria-expanded="false">
                                <i class="ti ti-cash"></i>
                                <span class="hide-menu">Apply for Loan</span>
                            </a>
                        </li>

                        <!-- =================== -->
                        <!-- File a Claim -->
                        <!-- =================== -->
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("fileclaim", "UserHome")" aria-expanded="false">
                                <i class="ti ti-clipboard-plus"></i>
                                <span class="hide-menu">File a Claim</span>
                            </a>
                        </li>

                        <!-- =================== -->
                        <!-- Track Your Claim -->
                        <!-- =================== -->
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("TrackClaim", "UserHome")" aria-expanded="false">
                                <i class="ti ti-search"></i>
                                <span class="hide-menu">Track Your Claim</span>
                            </a>
                        </li>

                        <!-- =================== -->
                        <!-- My Applications -->
                        <!-- =================== -->
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("myapplication", "UserHome")" aria-expanded="false">
                                <i class="ti ti-list-details"></i>
                                <span class="hide-menu">My Applications</span>
                            </a>
                        </li>

                        <!-- ============================= -->
                        <!-- Other -->
                        <!-- ============================= -->
                        <li class="nav-small-cap">
                            <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
                            <span class="hide-menu">Resources & Support</span>
                        </li>

                        <!-- =================== -->
                        <!-- Support -->
                        <!-- =================== -->
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("support", "UserHome")" aria-expanded="false">
                                <i class="ti ti-help"></i>
                                <span class="hide-menu">Support</span>
                            </a>
                        </li>

                        <!-- =================== -->
                        <!-- Logout -->
                        <!-- =================== -->
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("Logout","UserHome")" aria-expanded="false">
                                <i class="ti ti-logout"></i>
                                <span class="hide-menu">Logout</span>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->

        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler" id="headerCollapse" href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="javascript:void(0)" id="drop1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="ti ti-bell"></i>
                                <div class="notification rounded-circle" style="background-color: #f5a526 ;"></div>
                            </a>
                            @* <div class="dropdown-menu dropdown-menu-animate-up" aria-labelledby="drop1">
                                <div class="message-body">
                                    <a href="javascript:void(0)" class="dropdown-item">Item 1</a>
                                    <a href="javascript:void(0)" class="dropdown-item">Item 2</a>
                                </div>
                            </div> *@
                        </li>
                    </ul>
                    <!-- === THIS IS THE CORRECTED PART === -->
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                            <!-- Welcome Message (Visible on Large Screens Only) -->
                            <li class="nav-item d-none d-lg-block">
                                <span class="fs-4 fw-semibold">Welcome, @Context.Session.GetString("userName")</span>
                            </li>
    
                            <!-- Profile Picture & Dropdown -->
                            <li class="nav-item dropdown ms-3">
                                <a class="nav-link" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <img src="~/admin/assets/images/profiles/@Context.Session.GetString("userImg")" alt="User Profile" width="35" height="35"
                                         class="rounded-circle" />
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                    <div class="message-body">
                                        <!-- Link to Profile Page -->
                                        <a href="@Url.Action("profile", "UserHome")" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-user fs-6"></i>
                                            <p class="mb-0 fs-3">My Profile</p>
                                        </a>
                                        <!-- Link to MyWallet Page -->
                                        <a href="@Url.Action("MyWallet", "UserHome")" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-report-money fs-6"></i>
                                            <p class="mb-0 fs-3">My Wallet</p>
                                        </a>
                                        <!-- Link to Policies Page -->
                                        <a href="@Url.Action("MyPolicies", "UserHome")" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-shield fs-6"></i>
                                            <p class="mb-0 fs-3">My Policies</p>
                                        </a>
                                        <!-- Link to Payment Page -->
                                        <a href="@Url.Action("makepayment", "UserHome")" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-wallet fs-6"></i>
                                            <p class="mb-0 fs-3">Make Payment</p>
                                        </a>
                                        <!-- Logout Button -->
                                        <a href="@Url.Action("Logout", "UserHome")" class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <!-- === END OF CORRECTED PART === -->
                </nav>
            </header>
            <!--  Header End -->
            
            <!-- This is where your page content will be rendered -->
            <div>
                @RenderBody()
            </div>

            <!-- Footer -->
            <!-- Footer -->
            <div class="py-6 px-6 text-center">
                <p class="mb-0 fs-4" style="color: var(--profile-text-muted);">
                    © 2024, Designed and Developed by
                    <a href="@Url.Action("Index", "UserHome")" class="pe-1 text-decoration-underline" style="color: var(--profile-primary);">PolicyPro360</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/user/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/user/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/user/assets/js/sidebarmenu.js"></script>
    <script src="~/user/assets/js/app.min.js"></script>
    <script src="~/user/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/user/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/user/assets/js/dashboard.js"></script>
    <!-- solar icons -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>

    
    @RenderSection("Scripts", required: false)
</body>

</html>